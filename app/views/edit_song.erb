<h1>Edit That Killer Song!</h1>

<form method="POST" action="/songs/<%=@song.slug%>/edit">
  
  <label for="name"> Artist Name: </label>
  <input id="name" type="text" name="Artist Name" value="<%= @song.artist.name %>"><br>

  <label for="song"> Song name: </label>
  <input id="song" type="text" name="Name" value="<%= @song.name %>"><br>

  <label for="genre"> Genre: </label> <br>
  <% Genre.all.each do |genre| %>
 
  <%=genre.name%><input id="<%=genre.name%>" type="checkbox" name="genre[]" value="<%= genre.name %>">
  <% end %>

  <input type="submit" value="Save">

</form>

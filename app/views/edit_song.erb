<h1>Edit Song:</h1>

<form action="/songs/<%= @song.slug %>/edit" method="post">
  Name<input type="text" name="Name" value="<%=@song.name%>"><br><br>
  Artist Name<input type="text" name="Artist Name" value="<%=@song.artist.name%>"><br><br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"
      <% if @song.genres.include?(genre) %>
      checked
      <% end %>
    ><%=genre.name%><br>
  <% end %>
  Create<input type="submit" value="Save">
</form>

<h1><%= @genre.name %></h1>

<h2><label name="songs">Songs</label></h2>

<%@genre.songs.each.with_index(1) do |song, index|%>
  <p><%= index %>. <a href="/songs/<%=song.slug%>"><%=song.name%><a></p>
<%end%>

<h2><label name="artists">Artists</label></h2>

<%@genre.artists.each.with_index(1) do |artist, index|%>
  <p><%= index %>. <a href="/artists/<%=artist.slug%>"><%=artist.name%></a></p>
<%end%>

<h3><%= @genre.name %></h3>
<ul>
  <li>Songs: </li>
  <ol>
    <% @genre.songs.sort_by{ |song| song.name }.each do |song| %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
    <% end %>
  </ol>
  <li>Artists: </li>
  <ol>
    <% @genre.artists.sort_by{ |artist| artist.name }.each do |artist| %>
    <li><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></li>
    <% end %>
  </ol>
</ul>
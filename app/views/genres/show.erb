<h2>Genre Name: <%=@genre.name%></h2>

<p>Artists</p>

<% if @genre.artists.empty? %>
  There is no artist for this genre.
<% else %>
  <ul>
    <% @genre.artists.each do |artist| %>
      <li><a href="/artists/<%=artist.slug%>"><%=artist.name%></a></li>
    <% end %>
  </ul>
<% end %>

<p>Songs</p>
<% if @genre.songs.empty? %>
  There is no song for this genre.
<% else %>
  <ul>
    <% @genre.songs.each do |song| %>
      <li><a href="/songs/<%=song.slug%>"><%=song.name%></a></li>
    <% end %>
  </ul>
<% end %>

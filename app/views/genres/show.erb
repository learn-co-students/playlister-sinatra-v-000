<!DOCTYPE html>
<html>
<head>
	<title>Genres</title>
</head>
<body>
	<h1>Genre:</h1>
	<%=@genre.name.upcase%>

	<h3>Song(s):</h3>
	<%@genre.songs.each do |song| %>
	<li><a href="/songs/<%=song.slug%>"><%=song.name%></a></li>
	<%end%>

	<h3>Artist(s)</h3>
	<%@genre.songs.each do |song| %>
	<li><a href="/artists/<%=song.artist.slug%>"><%=song.artist.name%></a></li>
	<%end%>
</body>
</html>
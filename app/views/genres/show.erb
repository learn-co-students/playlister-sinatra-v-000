
<h1><%= @genre.name %></h1>

<h2>Artists who have this genre:</h2>
<ul>
<% @genre.artists.each do |artist| %>
<li>
<a href='/artists/<%= artist.slug %>'>
<%= artist.name %>
</a>
</li>
</ul>
<% end %>
<h2>Songs with this genre:</h2>
<ol>
<% @genre.songs.each do |song| %>
<li>
<a href='/songs/<%= song.slug %>'>
<%= song.name %>
</a>
</li>
<% end %>
</ol>

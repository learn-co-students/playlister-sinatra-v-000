<!-- 
Any given genre's show page should have links to each of its artists and songs.
Takes in an instance varible @genre.
 -->

 <h2><%= @genre.name %>:</h2>

<h3>Songs:</h3>

<ol>
  <% @songs.each do |song| %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
  <% end %>
</ol>

<h3>Artists:</h3>

<ol>
  <% @artists.each do |artist| %>
    <li><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></li>
  <% end %>
</ol>
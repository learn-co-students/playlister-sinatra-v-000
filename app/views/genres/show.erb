<!DOCTYPE html>
<html>
<head>
<title>Genre show page</title>
</head>

<body>
<h1><%= @genre.name.capitalize %> Artists:</h1>
<% @genre.artists.each do |artist| %>
<li><a href="/artists/<%= artist.slug %>"> <%= artist.name %> </a></li>
<% end %>
<br>
<br>

<h1><%= @genre.name.capitalize %> Songs:</h1>
<% @genre.songs.each do |song| %>
<li><a href="/songs/<%= song.slug %>"> <%= song.name %> </a></li>
<% end %>
<br>
<br>

</body>

</html>

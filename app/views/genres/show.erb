<!DOCTYPE HTML>
<html>
  <header>
    <h1>Genre: <%=@genre.name%></h1>
  </header>
  <body>

    <h3>Songs by <%=@genre.name%>:<ul>
                                    <% @genre.songs.each do |song| %>
                                    <li>
                                    <a href="/songs/<%=song.slug%>"><%=song.name%></a>
                                    </li>
                                    <%end%></h3>
                                  </ul>
    <h4>Artists in <%=@genre.name%>:<ul>
                                      <% @genre.artists.each do |artist| %>
                                      <li>
                                      <a href="/artists/<%=artist.slug%>"><%=artist.name%></a>
                                      </li>
                                      <% end %></h4>
                                    </ul>
  </body>
</html>

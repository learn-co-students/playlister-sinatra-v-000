<!DOCTYPE html>
<h1><%=@genre.name%></h1>

<br>
<h2><%=@genre.name%> Songs </h2>
<% Song.all.each do |song| %>
  <% if song.genres.ids.include?(@genre.id)%>
  <a href='/songs/<%=song.slug%>'> <%=song.name%>  </a> <br>
  <% end %>
<% end %>

<br>
<h2><%=@genre.name%> Artists </h2>
<% Artist.all.each do |artist| %>
  <% if artist.genres.ids.include?(@genre.id)%>
  <a href='/artists/<%=artist.slug%>'> <%=artist.name%><br>
  <% end %>
<% end %>

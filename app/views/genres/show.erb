<h1><%= @genre.name %></h1>

<h3>Artists and Songs</h3>

<% @genre.artists.each do |a| %>
<a href="/artists/<%= a.slug %>"><%= a.name %></a></li>

  <ul>
  <% a.songs.each do |s| %>
    <%if s.genres.any?{|genre| genre.name == @genre.name}  %>
    <li><a href="/songs/<%= s.slug %>"><%= s.name %></a> </li>
    <%end%>
  <% end %>
  </ul>

<% end %>

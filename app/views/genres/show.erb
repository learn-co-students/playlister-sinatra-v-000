<h2><%= @genre.name %></h2>

<h4>Artists:</h4>
<ol>
  <% @genre.artists.sort_by{|a| a.name}.each do |artist| %>
    <li><em><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></em></li>
  <% end %>
</ol>

<h4>Songs:</h4>
<ol>
  <% @genre.songs.sort_by{|a| a.name}.each do |song| %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
  <% end %>
</ol>

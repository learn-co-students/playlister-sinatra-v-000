<h1><%= @genre.name %></h1>
<h2>Songs: </h2>
<%@genre.songs.each do |s| %>
  <a href="/songs/<%=s.slug%>"><%=s.name%></a>
  <br></br>
<% end %>
<h2>Genres: </h2>
<%@genre.artists.each do |a| %>
  <a href="/artists/<%=a.slug%>"><%=a.name%></a>
  <br></br>
<% end %>

<form action="/genres/<%=@genre.id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete">
</form>
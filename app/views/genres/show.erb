<h1><%= @genre.name.capitalize %></h1>

<h3>Artists</h3>
<ul>
<% @genre.artists.collect do |a| %>
  <li><a href="/artists/<%= a.slug %>"><%= a.name %></a></li>
<% end %>
</ul>

<h3>Songs</h3>
<ul>
<% @genre.songs.collect do |s| %>
  <li><a href="/songs/<%= s.slug %>"><%= s.name %></a></li>
<% end %>
</ul>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Genre Show Page</title>
</head>
<body>
  <h1><%= @genre.name %></h1>
  <h3>Artists:</h3>
  <% @genre.artists.each_with_index do |artist, i| %>
    <%= "#{i+1}. " %> 
    <a href="/artists/<%=artist.slug%>">
      <%= artist.name %></a><br>
  <%end%>

  <h3>Songs:</h3>
    <% @genre.songs.each_with_index do |song, i| %>
    <%= "#{i+1}. " %>
    <a href="/songs/<%=song.slug%>">
      <%= song.name %></a><br>
    <%end%>
</body>
</html>
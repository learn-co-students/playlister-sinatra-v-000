<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title>Playlister</title>
   </head>
   <body>
      <h1>Genre info</h1>
      <h2>Artists</h2>
      <ul>
         <%@genre.artists.each do |artist| %>
            <li>
               <a href="/artists/<%=artist.slug%>"><%=artist.name%></a>
            </li>
         <%end%>
      </ul>
      <h2>Songs</h2>
      <ul>
         <%@genre.songs.each do |song| %>
            <li>
               <a href="/songs/<%=song.slug%>">
                  <%=song.name%>
               </a>
            </li>
         <%end%>
      </ul>
   </body>
</html>

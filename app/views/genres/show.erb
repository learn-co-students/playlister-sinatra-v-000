<h1><%= @genre.name %></h1>


<% if !@genre.songs.blank? %>
    <h3>Songs</h3>
    <ol>
      <% @genre.songs.each do |song| %>
        <li><h4><a href="/songs/<%= song.slug %>"><%=song.name %></a></h4></li>
      <% end %>
    </ol>
<% else %>
  No Songs
<% end %>

<% if !@genre.artists.blank? %>
  <h3>Artists:</h3>
  <ol>
    <% @genre.artists.each do |artist| %>
      <li><h4><a href="/artists/<%= artist.slug %>"><%=artist.name %></a></h4></li>
    <% end %>
  </ol>
<% else %>
  No Artists
<% end %>

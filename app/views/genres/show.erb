<h1><%= @genre.name %></h1>

<h2><%= 'Artist' if @genre.artists.size > 0 %><%= 's' if @genre.artists.size > 1 %></h2>
<ul>
  <% @genre.artists.each do |artist| %>
    <li><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></li>
  <% end %>
</ul>

<h2><%= 'Song' if @genre.songs.size > 0 %><%= 's' if @genre.songs.size > 1 %></h2>
<ul>
  <% @genre.songs.each do |song| %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
  <% end %>
</ul>

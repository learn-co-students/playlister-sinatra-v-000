<DOCTYPE! html>
<html>

  <head>
    <title> Welcome to Playlister! </title> 
  </head>

  <body>
    <h1>Genre Information</h1>

    <p>Name: <%= @genre.name %></p>

    <p> Artists: </p>
    <% @genre.artists.each do |artist| %>
      <p><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></p>
    <%end%>

    <p> Songs: </p>
    <% @genre.songs.each do |song| %>
      <p><a href="/songs/<%= song.slug %>"><%= song.name %></a></p>
    <%end%>
  </body>
</html>


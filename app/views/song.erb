
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Playlister - <%=@song.name%></title>
  </head>
  <body>
    <% if flash.has?(:message) %>
      <%= flash[:message] %>
    <% end %>
    <h2><%=@song.name%></h2>
      <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></br>

    <h3>Genres</h3>
    <%@song.genres.each do |genre|%>
      <a href="/genres/<%=genre.slug%>"><%=genre.name%></a></br>
    <%end%>

  </body>
</html>

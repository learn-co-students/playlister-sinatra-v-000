<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Playlister - <%=@genre.name%></title>
  </head>
  <body>
    <h2><%=@genre.name%></h2>

    <h3>Songs</h3>
    <%@genre.songs.each do |song|%>
      <a href="/songs/<%=song.slug%>"><%=song.name%></a></br>
    <%end%>

    <h3>Artists</h3>
    <%@genre.artists.each do |artist|%>
      <a href="/artists/<%=artist.slug%>"><%=artist.name%></a></br>
    <%end%>

  </body>
</html>

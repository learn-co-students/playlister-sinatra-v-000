<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <% if !!session[:created_song] %>
      <%= session[:created_song] %>
    <% end %>

    <% if !!session[:updated_song] %>
      <%= session[:updated_song] %>
    <% end %>

    <h1>Song: <%= @song.name %> </h1>
    <h2>Artist: <a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %></h2></a>
    <h2>Genres:
      <% @song.genres.each do |genre| %>
          <p> <a href="/genres/<%= genre.slug %>"> <%= genre.name %></a></p>
      <% end %>

      </h2>

  </body>
</html>

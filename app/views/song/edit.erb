<form method="post" action="/songs/<%=@song.slug%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name<input type="text" value="<%=@song.name%>" name="song[name]"><br>
  Artist Name<input type="text" value="<%=@song.artist.name%>" name="artist[name]" id="Artist Name"><br>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>">
  <% end %>
  <input type="submit" value="Save">
</form>
<h1>Update a Song</h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Artist:</label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>">
  <br>
  <label>Song Name: </label>
  <input  type="text" name="Name" value="<%= @song.name %>">
  <br>
  <label>Genre: </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"
    <%= 'checked' if @song.genre_ids.include?(genre.id) %>>
  <% end %>
  <br>
  <input id="submit" type="submit" value="Save">
</form>

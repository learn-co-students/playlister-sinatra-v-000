<h1>Create new Song </h1>

<form action="/songs" method="post">
  <p>Song Name: <input type="text" name="song_name" id="Name"></p>
  
  <p>Artist Name: <input type="text" name="artist_name" id="Artist Name"></p>

  <p>Select Genre:</p>
  <% @genres.each do |g|%>
    <input type="checkbox" name="genres[]" value="<%=g.id%>" id="<%=g.name%>"><%=g.name%></input>
  <% end %>

  <p><input type="submit" name="" value="Create"></p>

</form>

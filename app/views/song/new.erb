<h1>Create a New Song</h1>

<br>

<form action="/songs" method="post">
  <label for="song[name]">Song Name:
    <input type="text" name="song[name]" id="Name">
  </label> <br>
  <label for="song[artist]">Song Artist:
    <input type="text" name="song[artist]" id="Artist Name">
  </label> <br>
  <label for="genres[id][]">Song Genres: <br>
    <!-- ITERATE OVER GENRES CHECK BOXES -->
    <% Genre.all.each do |genre| %>
      <input id="<%= genre.name %>" type="checkbox" name="genres[id][]" value="<%= genre.id %>"> <%= genre.name %> <br>
    <% end %>

  </label>

  <input type="submit" name="Create" value="Create">

</form>

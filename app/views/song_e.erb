<form method="POST" action="/songs/<%=@song.slug%>">
  <input id="hidden" type="hidden" name="_method" value="patch" />

<label>Song's name:<input type='text' name="song_name" id="Name"></label><br>
  
  <% Artist.all.each do |artist| %>
  <input type="radio" id="<%= artist.id %>" name="something" value="<%= artist.name %>"/>
  <label for="<%= artist.id %>"><%= artist.name %></label>
  <% end %>
  <label>Artist's name:<input type='text' name="artist_name" id="Artist Name"></label><br>
  
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <%=genre.name%> <br>
  <% end %>
  
  <button type="submit" value"Save">Save</button>

</form>
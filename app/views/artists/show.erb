<html>
<body>
  <h2><%=@artist.name%></h2>
  <hr>
  <h3>Songs</h3>
  <ul>
    <% @artist.songs.each do |song| %>
      <li><p><a href="songs/<%=song.id%>"<%=song.name%></a></p></li>
    <% end %>
  </ul>

  <hr>

  <h3>Genres</h3>
  <ul>
    <% @artist.genres.each do |genre| %>
      <li><p><a href="genres/<%=genre.id%>"<%=genre.name%></a></p></li>
    <% end %>
  </ul>
</body>
</html>

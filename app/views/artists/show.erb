<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title>Playlister</title>
   </head>
   <body>
      <h1>Aritst info</h1>
      <h2>Songs</h2>
      <ul>
         <%@artist.songs.each do |song| %>
            <li>
               <a href="/songs/<%=song.slug%>"><%=song.name%></a>
            </li>
         <%end%>
      </ul>
      <h2>Genres</h2>
      <ul>
         <%@artist.genres.each do |genre| %>
            <li>
               <a href="/genres/<%=genre.slug%>">
                  <%=genre.name%>
               </a>
            </li>
         <%end%>
      </ul>
   </body>
</html>

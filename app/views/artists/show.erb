<!DOCTYPE html>
<html>
<head>
  <title>Artists</title>
</head>
  <body>
    <h1><%=@artist.name%></h1>

    <br></br>

    <h3>Song List</h3>
      <ul>
        <%@artist.songs.each do |song| %>

          <li><a href="/songs/<%= song.slug %>"><%=song.name%></a></li>
        <% end %>
      </ul>

      <br></br>

      <h3>Genre List</h3>
        <ul>
          <%artist.genres.each do |song| %>
            <li><a href="/genres/<%= genre.slug %>"><%= genre.name%></a></li>
          <% end %>
        </ul>
    </body>
</html>
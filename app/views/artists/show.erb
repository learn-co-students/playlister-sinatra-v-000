<h1><%= @artist.name.upcase %></h1>

<b>SONGS</b>
<% @artist.songs.uniq.each do |song| %>
  <ul>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
  </ul>
<% end %>

<b>GENRES</b>
<% @artist.genres.uniq.each do |genre| %>
  <ul>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  </ul>
<% end %>

<br></br>

<h4><a href="/artists">view all artists</a></h4>

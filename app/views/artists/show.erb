<h2><%= @artist.name %></h2>

<h3>Songs:</h3>
<ol>
  <% @artist.songs.sort_by{|a| a.name}.each do |song| %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
  <% end %>
</ol>

<h4>Genres:</h4>
<ul>
  <% @artist.genres.sort_by{|a| a.name}.each do |genre| %>
    <li><em><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></em></li>
  <% end %>
</ul>

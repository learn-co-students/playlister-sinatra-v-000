<h1><%=@artist.name%></h1>

<h2>Songs</h2>

<ul>
<% @songs.each do |song| %>
  <% if song.artist_id == @artist.id %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
  <% end %>
<% end %>
</ul>

<% @artist.genres.uniq.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
<% end %>
<!DOCTYPE html>
<html>
  <head> Artist Page </head>

  <body>
    <h1>Artist: <%=@artist.name %></h1>

      <h3> Songs:  </h3>
      <% @artist_songs.each do |song| %>

        <ul>
          <li><a href='/songs/<%=song.slug%>'><%=song.name%></a></li>
        </ul>
        <% end %>

    <h3> Genres: <% @artist_genres.each do |genre| %> </h3>
      <ul>
        <li><a href='/genres/<%=genre.slug%>'><%=genre.name%></a></li>
      </ul>
      <% end %>

    </body>
</html>

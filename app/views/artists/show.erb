<h2><em><%= @artist.name %></em></h2><br>

<p class="lead">Songs</p>
<ul>
  <% @artist.songs.each do |song| %>
  <li><p class="lead"><a href="/songs/<%=song.slug%>"><%= song.name %></a></p></li>
  <% end %>
</ul>

<p class="lead">Genres</p>
<ul>
  <% @artist.genres.each do |genre| %>
  <li><p class="lead"><a href="/genres/<%=genre.slug%>"><%= genre.name %></a></p></li>
  <% end %>
</ul>

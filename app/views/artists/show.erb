<h1><%= @artist.name %></h1>

<ul>
	<% Song.all.each do |song| %>
		<% if song.artist_id == @artist.id %>
			<li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
			<% genre = Genre.find_by_id(song.id) %>
			<li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
		<% end %>
	<% end %>
</ul>
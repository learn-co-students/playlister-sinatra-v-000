<h1>Here is the artist that you selected!</h1>

<h3>Name: <%= @artist.name %></h3>

<h4><%= @artist.name %>'s song(s):</h4>
<ol>
  <% @artist.songs.sort_by{ |song| song.name }.each do |song| %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
  <% end %>
</ol>

<h4><%= @artist.name %>'s genre(s):</h4>
<ol>
  <% @artist.genres.sort_by{ |genre| genre.name }.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ol>

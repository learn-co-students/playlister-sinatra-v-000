<h3><%= current_artist.name %></h3>

<h4>Songs:<h4>
  <ul>
    <% current_artist.songs.each do |song| %>
      <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
    <% end %>
  </ul>

<h4>Genres:<h4>
  <ul>
    <% current_artist.genres.each do |genre| %>
      <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
    <% end %>
  </ul>

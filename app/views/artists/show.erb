<!DOCTYPE HTML>
<html>
  <header>
    <h1>Artist: <%=@artist.name%></h1>
  </header>
  <body>

    <h3>Songs by <%=@artist.name%>:<ul>
                                    <% @artist.songs.each do |song| %>
                                    <li>
                                    <a href="/songs/<%=song.slug%>"><%=song.name%></a>
                                    </li>
                                    <%end%></h3>
                                  </ul>
    <h4>Genres by <%=@artist.name%>:<ul>
                                    <% @artist.genres.each do |genre| %>
                                    <li>
                                    <a href="/genres/<%=genre.slug%>"><%= genre.name %></a>
                                    </li>
                                    <% end %></h4>
                                  </ul>
  </body>
</html>

<!DOCTYPE html>
<html>
 <head>
  <meta charset="UTF-8">
  <title><%= @artist.name %></title>
 </head>
 <body>
  <h1><%= @artist.name %></h1>
  <p>Songs:</p>
    <ol>
      <% @artist.songs.each do |song| %>

        <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
      <% end %>
    </ol>
  <p>Genres: </p>
    <ol>
      <% @artist.genres.each do |genre| %>
        <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></li>
      <% end %>
    </ol>
</body>
</html>

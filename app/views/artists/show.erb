<h1><%= @artist.name %></h1>
<% @songs.each do |song| %>
  <h3><a href="/songs/<%= song.slug %>"><%= song.name %></a></h3>
<% end %>
<% @genres.each do |genre| %>
  <h3><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h3>
<% end %>
<form action="/artists/<%= @artist.slug %>/delete" method="post">
  <input type="hidden" name="_method" value="delete" id="hidden">
  <input type="submit" value="delete">
</form>

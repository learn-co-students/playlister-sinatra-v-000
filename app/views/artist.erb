<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Playlister - <%=@artist.name%></title>
  </head>
  <body>
    <h2><%=@artist.name%></h2>

    <h3>Songs</h3>
    <%@artist.songs.each do |song|%>
      <a href="/songs/<%=song.slug%>"><%=song.name%></a></br>
    <%end%>

    <h3>Genres</h3>
    <%@artist.genres.each do |genre|%>
      <a href="/genres/<%=genre.slug%>"><%=genre.name%></a></br>
    <%end%>

  </body>
</html>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song Details</h1>
<h2><%= @song.name %></h2>
<p>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>
<p>Genres: <% @song.genres.each do |genre| %>
<a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
<% end %>
</p>

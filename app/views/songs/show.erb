
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>

  <h1> <%= @song.name %> </h1>

  <h4>Artist:</h4>
    <a href= '/artists/<%= @song.artist.slug %>'> <%= @song.artist.name %> </a></ul>

  <h4>Genres:</h4>
    <% @song.genres.each do |genre| %>
        <ul><a href= '/genres/<%= genre.slug %>'> <%= genre.name %> </a></ul>
      <% end %>

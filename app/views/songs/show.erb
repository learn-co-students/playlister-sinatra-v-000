<h1>Song page</h1>

<h3><label for="song_name">Song name: </label><%=@song.name%></h3>


<h3><label for="Artist">Artist:</label></h3>
<p><a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></p>

<h3><label for="Genres">Genres:</label></h3>
<% @song.genres.each do |genre|%>
    <p><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></p>
<%end%>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>
<h3>by <a href='/artists/<%=@song.artist.slug%>'>
        <%=@song.artist.name%></a></h3>
<hr>
<h3>Listed in the following Genres</h3>
<% @song.genres.each do |genre| %>
  <a href='/genres/<%=genre.slug%>'><h4><%=genre.name%></h4><a>
<% end %>

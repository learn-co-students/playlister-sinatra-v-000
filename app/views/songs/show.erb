<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Song: <%=@song.name%></h2>

<p><strong>Artist: </strong> <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></p>

<p><strong>Genre(s): </strong></p>
<ul>
  <% @song.genres.each do |g| %>
  <li><a href="/genres/<%=g.slug%>"><%=g.name%></a></li>
  <% end %>
</ul>

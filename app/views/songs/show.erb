<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>
<h2>Artist:</h2>
<% if @song.artist %>
  <a href="/artists/<%= @song.artist.slug %>"><%=@song.artist.name%></a>
<% else %>
  <p>No Artist attributed to this song</p>
<% end %>
<h4>Genres:</h4>
<% @song.genres.each do |g| %>
  <p><a href="/genres/<%= g.slug %>"><%=g.name.split(" ").collect{|w| w.capitalize}.join(" ")%></a><p>
<% end %>

<h1><%= @song.name %></h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Artist: </h2> 
<a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>

<h2>Genres: </h2>
<% @song.genres.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %> </a>
<% end %>

<br><br>
<a href="/songs/<%= @song.slug %>/edit">Edit Song</a>
<br>
<a href="/songs">Back to All Songs</a>



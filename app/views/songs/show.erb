<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>


<p>Artist Name: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
</p>

<p>Genres: 
  <ul>
    <% @song.genres.each do |genre| %>
      <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
    <% end %>
  </ul>
</p>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>

 <br/><br/>

 <h3>Artist:</h3>

 <br/>
 <a href = '/artists/<%=@song.artist.slug %>'><%=@song.artist.name%></a>

 <br/><br/>

 <h3>Genres:</h3>

 <br/>

 <% @song.genres.each do |genre| %>
   <li><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></li>
 <%end%>

 <form action="/songs/<%= @song.slug %>/edit">
  <input type="submit" value="Edit">
</form>

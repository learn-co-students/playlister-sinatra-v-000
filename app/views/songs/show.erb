<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1> <%= @song.name %> </h1>
<p>Artist:
<a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>
<p> Genres: </p>
<% @song.genres.each do |genre| %>
 <a href="/genres/<%= genre.slug %>"><%= genre.name %></a><br>
<% end %>
<br><br>
<input type="button" value="Edit" onclick="location.href='/songs/<%= @song.slug %>/edit'">
<input type="button" value="Home" onclick="location.href='/songs'">

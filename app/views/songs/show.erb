<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h3>Song: <%=@song.name%></h3>
<p>
  <%=@song.name%>
</p>
<h4>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h4>

<h4>Genres:</h4>
<ul>
  <%@song.genres.each do |genre|%>
  <li><a href="/genres/<%=genre.slug%>"><%= genre.name %></a></li>
  <%end%>
</ul>

<a href="/songs/<%= @song.slug %>/edit">Edit this song.</a>

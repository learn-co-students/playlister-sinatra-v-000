<h2><%= @song.name %></h2>
<% unless locals.empty? %>
  <%= message %>
<% end %>
<h3>Artist: <a href='/artists/<%= @song.artist.slug %>'><%= @song.artist.name %><a></h3>
<br><br>
<h3>Genre(s): </h3>
<% @song.genres.each do |genre| %>
  <p><a href='/genres/<%= genre.slug %>'><%= genre.name %><a></p>
<% end %>
<br><br>
<form method='GET' action='/songs/<%= @song.slug %>/edit'>
  <input type='submit' name='edit_song' value='Edit Song'>
</form>

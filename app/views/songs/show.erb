<% if @success_message %>
  <div id="success" style="border: 1px solid red;">
  <%= @success_message %>
  </div>
<% end %>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<%= @song.name %><br>
<a href='/artists/<%= @song.artist.slug %>'> <%= @song.artist.name %></a>
<% @song.genres.each do |genre| %>
<h4><a href='/genres/<%= genre.slug %>'> <%= genre.name %> </a> </h4>
<% end %>



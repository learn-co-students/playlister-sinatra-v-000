<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<h2>Artist:</h2>
  <p><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %> </a></p>

<h2>Genre:</h2>
<p><% @song.genres.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %> </a>
<% end %>
</P>

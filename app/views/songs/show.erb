<h1> <%= @song.name %> </h1>

<% if flash.has?(:message) %>
  <p> <%= flash[:message] %> </p>
<% end %>

<a href="/songs">Back to Songs Library</a>

<p> Artist: <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a> </p>

<% @song.genres.each do |genre| %>
  <p> Genre(s): <a href="/genres/<%=genre.slug%>"><%=genre.name%></a> </p>
<% end %>

<a href="/songs/<%=@song.slug%>/edit">Edit Song</a>

<h1><%= @song.name %> </h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h3>Artist Name</h3>

  <a href="/artists/<%= @song.artist.slug %>">
    <%= @song.artist.name %>
  </a>

<h3>Genre</h3>
  <p>
  <% @song.genres.each do |genre| %><a href="/genres/<%= genre.slug %>">
    <%= genre.name %></a>
    <% end %>
  </p>

<p><a href="/songs/<%= @song.slug %>/edit">Edit Song</a></p>

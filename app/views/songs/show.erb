<html>
<body>
  <h2><%=@song.name%></h2>
  <h4><a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h4>
  <ul>
    <% @song.genres.each do |genre| %>
      <li><p><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></p></li>
    <% end %>
  </ul>

  <% if flash.has?(:message) %>
  <%= flash[:message] %>
  <% end %>
</body>
</html>

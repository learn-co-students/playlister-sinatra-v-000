<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<p><%=@song.name%></p>
<p>Artist:</p>
<p><a href="../artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></p>
<p>Genres:</p>
<%@song.genres.each {|instance|%>
  <p><a href="../genres/<%=instance.slug%>"><%=instance.name%></a></p>
<%}%>

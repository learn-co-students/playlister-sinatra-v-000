<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>



<h1><%= @song.name %></h1>
<b>Artist:</b> <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
<br></br>
<b>Genre:</b>
<% @song.genres.collect do |g| %>
  <a href="/genres/<%= g.slug %>"><%= g.name %></a>
<% end %>
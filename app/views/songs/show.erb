<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<h4>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h4>

<% @song.genres.each do |genre| %>
  <h5>Genre: <a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h5>
<% end %>
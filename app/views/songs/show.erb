<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>


<h2><%=@song.name%></h2>

<h3>Artist </h3>
<h5><a href="/artists/<%=@song.artist.slug%>"> <%=@song.artist.name%> </a></h5>


<h3>Genres </h3>
<ul>
  <%  @song.genres.each do |genre| %>
      <li><a href="/genres/<%=genre.slug%>"><%=genre.name %> </a></li>
  <% end %>
</ul>


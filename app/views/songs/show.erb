
      <% if flash.has?(:message) %>
         <%= flash[:message] %>
      <% end %>
<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title>Playlister</title>
   </head>
   <body>

      <h1>Song title - <%=@song.name%></h1>

      <h2>Artist</h2>
      <p>
         <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a>
      </p>

      <h2>Genres</h2>
      <ul>
         <%@song.genres.each do |genre| %>
            <li>
               <a href="/genres/<%=genre.slug%>">
                  <%=genre.name%>
               </a>
            </li>
         <%end%>
      </ul>
   </body>
</html>

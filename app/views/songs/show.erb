
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song </h1>

<h2><%= @song.name %></h2>
<h2><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>
<% @song.genres.each do |g| %>
	<h2><a href="/genres/<%= g.slug %>"><%= g.name %></a><%= g.name %></h2>
<% end %>


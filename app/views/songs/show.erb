<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2><%= @song.name %></h2>
<br></br>
<h3>Artist</h3>
<li><a href="/artists/<%=@song.artist.slug%>"><%= @song.artist.name %></a></li>
<br></br>
<h3>Genres</h3>
<% @song.genres.each do |genre| %>
  <li><a href="/genres/<%=genre.slug%>"><%= genre.name %></a></li>
  <br></br>
<% end %>

  <h4><a href='/songs/<%=@song.slug%>/edit'>Edit Song</a></h4>

<%= @message if !@message.nil? %>
<h2><%= @song.name %></h2>
<% if !@song.artist.nil? %>
  <h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>
<% end %>
<h3>Genres: </h3>
<ul>
  <% @song.genres.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ul>
<form action="/songs/<%= Slug.slugify(@song.name) %>/delete" method="post">
  <input type="hidden" id="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>

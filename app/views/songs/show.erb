<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1>Welcome to the song page for <%=@song.name%></h1>
<h3>Artist Info:</h3>
<p><a href='/artists/<%=@song.artist.slug%>'>Artist Name: <%=@song.artist.name%></a></p>
<h3>Genres:</h3>
<% @song.genres.each do |genre| %>
<p><a href='/genres/<%=genre.slug%>'><%=genre.name%></a></p>
<% end%>

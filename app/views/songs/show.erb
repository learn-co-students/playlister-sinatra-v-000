<h1>The Songs Show Page!</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
  <%end%>

  <h1> <% @song.name %> </h1>
  <br>
  <h3>Artist:</h3>
  <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
  <br>
  <h3>Genres:</h3>
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
  <%end%>

<br><br>

<a href="/songs/<%=@song.slug%>/edit">Edit</a>
<br><br>
<a href="/">Home</a>

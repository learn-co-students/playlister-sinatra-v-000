<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song Details</h1>
<h2>Name: </h2>
<p><%=@song.name%></p>
<h3>Artist: </h3>
<p><%=@song.artist.name%></p>
<a href="/artists/<%=@song.artist.slug%>">See more details about this artist</a>
<h3>Genres: </h3>
<%@song.genres.each do |genre|%>
<p><%=genre.name%></p>
<a href="/genres/<%=genre.slug%>">See more details about this genre</a>
<%end%>
<br></br>
<a href="/songs/<%=@song.slug%>/edit">Edit this song</a><br>
<a href="/songs">See all songs</a>
<br></br>
<form action="/songs/<%=@song.slug%>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="" value="Delete this song">
</form>

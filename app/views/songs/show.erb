<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1>Song: <%= @song.name %></h1>
<h2>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>
<h2>Genre:</h2>
<ul>

<% @song.genres.each do |sg| %>
  <li><a href= "/genres/<%=sg.slug%>"><%=sg.name%></a></li>
<%end%>
</ul>


<h2>
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
  <%= @song.name %>
</h2>

<p>
  Artist:
  <a href="/artists/<%= @song.artist.slug %>">
    <%= @song.artist.name %>
  </a><br>
</p>

<p>
  Genres:
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>,  
  <% end %>
</p>

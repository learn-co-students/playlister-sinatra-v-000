<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song:</h1>

<h2><%= @song.name %></h2>

<h3>by <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>

<h4>Genres:</h4>
<ul>
  <% @song.genres.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ul>


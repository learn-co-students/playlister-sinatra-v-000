<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>
<h1>Artist name: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h1>
<h2><%= @song.name %></h2>
<% @song.genres.each do |genre| %>
  <h2>Genre: <%= genre.name %></h2>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
<% end %>

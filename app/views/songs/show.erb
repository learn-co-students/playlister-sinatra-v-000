<h1>Show a Song: <%= @song.name %> </h1>
<h6>views/songs/show.erb</h6>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1> <%=@song.name%> </h1>
<h4> by
<a href="/artists/<%= @song.artist.slug %>">
<%= @song.artist.name %> </h4>
</a>
<br>
<h3>Genres: </h3>
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%=genre.slug%>"><h3> <%=genre.name%> </h3></a>
  <% end %>
<hr>

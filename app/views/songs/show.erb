<!DOCTYPE html>
<html>
<head>
  <title>Song</title>
</head>
<body>
  <label><h1>Individual Song</h1></label>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<form action="/songs/show" method="get">
  <p><h3>Name:</h3><%= @song.name %></p>
  <p><h4>Artist: </h4></p>
  <p><a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a>
  
<p><h4>Genres that include this song: </h4></p>
  <% @song.genres.each do |g| %>
  <p><a href="/genres/<%= g.slug %>"><%= g.name %></a></p>
  <% end %>
</form>

</body>
</html>
<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>
<h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist_name %></a></h3>
<br>
<h3>Genres: </h3>
<% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><li><%= genre.name %></li></a>
<% end %>
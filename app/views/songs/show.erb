<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<p>Song Name: <%= @song.name %></p>
<p>Artist: <a href='/artists/<%=@song.artist.slug%>'><%= @song.artist.name %></a></p>
<p>Genre:
  <% @song.genres.each do |genre| %>
  <a href='/genres/<%=genre.slug%>'><%= genre.name %></a>
  <% end %>
</p>
<form action='/songs/<%= @song.slug %>/edit' method='get'>
  <input type="submit" value="Edit">
</form>

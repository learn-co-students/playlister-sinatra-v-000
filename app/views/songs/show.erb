<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>
<h2>Performed by <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h2>
<ul>Genre(s):
  <%@song.genres.each do |genre|%>
    <li><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></li>
  <%end%>
</ul>

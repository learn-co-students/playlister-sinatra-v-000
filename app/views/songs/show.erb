<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<p> Name: <%= @song.name %> </p>
<p> Artist Name: <a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %> </a> </p>
Genres: 
<% @song.genres.each do |genre| %>
    <p> <a href="/genres/<%= genre.slug %>"> <%= genre.name %></a></p>
<% end %>

<%if flash.has?(:message)%>
  <%=flash[:message]%>
<%end%>

<h1><%=@song.name%></h1>
<h3><a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h3>
<br></br>
<h5>Genres:</h5>
<ul>
  <%@song.genres.each do |genre|%>
    <li><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></li>
  <%end%>
</ul>
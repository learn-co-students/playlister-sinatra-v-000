<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2><%=@song.name %></h2>
<h3><%= @song.artist.name %></h3>
<% if !@song.genres.empty? %>
<% @song.genres.each do|genre| %>
  <h3><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></h3>
  <%end%>
<%end%>
<p><a href="/artists/<%= @song.artist.slug %>">Learn more about <%=@song.artist.name%> here</a></p>

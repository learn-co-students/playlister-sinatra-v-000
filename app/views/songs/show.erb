<h1><%= @song.name %></h1>

<ul>
  <li>Artist: <a href="/artists/<%= @song.artist.slug%>"><%= @song.artist.name %></a></li>
  <li>Genre:
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
  <% end %>
  </li>
</ul>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

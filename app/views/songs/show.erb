
<h1>Show a Song: <%= @song.name %> </h1>
<h6>views/songs/show.erb</h6>

<a href="/songs/<%= @song.slug %>">
  <h3>Song Name: <%= @song.name %> </h3>
  <br>
  <% if @song.artist != nil %>
    <h3>by: <a href="/artists/<%= @song.artist.slug %>">
    <%= @song.artist.name %></a></h3>
  <% end %>
  <br>
  <h3>Genres: </h3>
  <% @song.genres.each do |genre|%>
  <%binding.pry%>
    <a href="/genres/<%=genre.slug%>"><h3> <%=genre.name%> </h3></a>
  <% end %>
<hr>

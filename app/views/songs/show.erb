<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>

<h3>Genre:</h3>

<% @song.genres.each_with_index do |genre, index| %>
  <h3><%= index + 1 %>. <a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h3>
<% end %>

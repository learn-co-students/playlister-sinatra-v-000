<h1>Your Selected Song</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<div class="song">
  <h2><%= @song.name %></h2>

  <h3>Artist: </h3>
  <ul>
    <li><a href='/artists/<%= @song.artist.slug %>'><%= @song.artist.name %></a></li>
  </ul>

  <h3>Genres:</h3>
  <ul> <% @song.genres.each do |genre| %>
    <li><a href='/genres/<%= genre.slug %>'><%=genre.name%></a></li>
    <% end %>
  </ul>
</div>

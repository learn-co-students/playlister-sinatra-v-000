<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>

<h1> <%= @song.name %> </h1>


<p>Artist: <a href= "/artists/<%= @artist.slug%>" > <%= @song.artist.name %> </a></p>

<p>Genres: </p>
<ul>
<% @genres.each do |genre|%>
    <li><a href= "/genres/<%= genre.slug%>" > <%= genre.name %> </a></li>
<% end %>
</ul>
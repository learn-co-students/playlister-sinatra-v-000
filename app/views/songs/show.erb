<%if flash.has?(:message)%>
  <%= flash[:message] %>
<% end %>
<h1><%= @song.name %></h1>
<h2>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>
<h3>
  Genres:
  <% @song.genres.uniq.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
  <% end %>
</h3>
<form action="/songs/<%= @song.slug %>/edit" method="GET">
  <input type="submit" value="edit">
</form>

<form action="/songs/<%= @song.slug %>/delete" method="POST">
	<input type="submit" value="delete">
</form>

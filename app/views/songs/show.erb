<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>Song: <%= @song.name %></h1>

<h2>Artist: <a href="/artists/<%= @song.artist.slug %>"></a><%= @song.artist.name %></h2>

<h2>Genres:</h2>
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"></a><%= genre.name %>
  <% end %>

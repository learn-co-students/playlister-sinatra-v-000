<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>
<h3>By <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h3>
<h3>Genres</h3>
<ul>
  <% @song.genres.each do |genre| %>
    <li><a href="/genres/<%=genre.slug%>"><%= genre.name %></a></li>
  <% end %>
</ul>
<br>
<a href="/songs/<%=@song.slug%>/edit">
<input type="submit" value="Edit">
</a>

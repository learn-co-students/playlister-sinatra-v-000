<% if flash.has?(:notice) %>
  <%= flash[:notice] %>
<% end %>

<h1><%= @song.name %></h1>

<% if @song.artist %>
  <h3>Artist</h3>
  <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
<% end %>

<h3>Genres</h3>
<% @song.genres.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %></a><br>
<% end %>

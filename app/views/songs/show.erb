<% if !!flash[:message] %>
  <%= flash[:message] %>
<% end %>

<h3><%= @song.name %></h3>

  <h4><a href='/artists/<%=@song.artist.slug%>'><%= @song.artist.name %></a></h4>
  <ul>
  <% @song.genres.each do |genre|%>
    <li>
      <h4><a href='/genres/<%=genre.slug%>'><%= genre.name %></a></h4>
    </li>

  <%end%>
  </ul>

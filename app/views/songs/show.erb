<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h3>Song Title: <%= @song.name %></h3>
<h4>Artist: <%= @song.artist.name %> - <a href="/artists/<%= @song.artist.slug %>">Artist Page</a></h4>
<h4>Genres</h4>
  <ul>
    <% @song.genres.each do |genre| %>
      <li><%= genre.name %> - <a href="/genres/<%= genre.slug %>">Genre Page</a></li>
    <% end %>
  </ul>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1> 

<h4>Artist: </h4><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
<br>

<h4>Genre(s):</h4>
<% @song.genres.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %></a><br>
<% end %>

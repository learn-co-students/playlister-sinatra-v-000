<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %> artist</h1>

<h2><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>

<h1><%= @song.name %> genres</h1>

<ul>
  <% @song.genres.each do |genre| %>
    <li>
      <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
    </li>
  <% end %>
</ul>

<% unless locals.empty? %>
  <%= message %>
<% end %>
<p>Name: <%= @song.name %></p>
<p>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>
<p>Genres:</p>
<ul>
<% @song.genres.each do |genre| %>
  <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></li>
<% end %>
</p>
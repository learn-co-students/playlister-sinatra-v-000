<% if flash.has?(:message) %>
  <%= flash[:message] %>
  <% end %>

<h1><%= @song.name %></h1>
<h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a> </h3>

<h3>Genres: </h3>
<% @song.genres.uniq.each do |g| %>
  <p><a href="/genres/<%= g.slug %>"><%= g.name %></a></p>
  <% end %>

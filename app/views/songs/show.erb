 
<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<h2>Song Title: <%= @song.name %> </h2> 
<h3>Song Artist: <a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %> </a>
<h3>Song Genres:</h3>
    <% @song.genres.each do |genre| %>
    <ul>            
    <li><a href="/genres/<%= genre.slug %>"> <%= genre.name %></li>
    </ul>
    <% end %>
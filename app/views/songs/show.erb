<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<h2><%= @song.name %></h2>

<h3> Artist: </h3>
  <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>

<h3> Genres: </h3>
  <% @song.genres.each do |g| %>
    <ul><a href="/genres/<%= g.slug %>"><%= g.name%></a></ul>
      <% end %>

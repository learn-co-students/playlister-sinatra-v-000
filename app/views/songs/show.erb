<% if !!flash[:new_message] %> <%= flash[:new_message] %> <% end %>
<% if !!flash[:update_message] %> <%= flash[:update_message] %> <% end %>

<h2><%= @song.name %></h2>
<h4><%= @song.artist.name %></h4>
<a href='/artists/<%= @song.artist.slug %>'>Link to Artist</a>
<% @song.genres.each do |genre| %>
  <h5><%= genre.name %></h5>
  <a href='/genres/<%= genre.slug %>'>Link to Genre</a>
<% end %>




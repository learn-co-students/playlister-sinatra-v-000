<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<!DOCTYPE html>
<html>
 <head>
  <meta charset="UTF-8">
  <title>Show Song</title>
 </head>
 <body>
	<h1>Song: <%=@song.name%></h1>
	  <h3>Artist: <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h3>
    <% @song.genres.each do |genre| %>
      <h3>Genre: <a href="/genres/<%= genre.slug %>"><%= genre.name %> </a></h3>
    <% end %>
  <br><br><a href="/songs">Return To Songs List</a>
 </body>
</html>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<h2><%= @song.name %></h2>

<h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>

<h3>Genres:</h3>
<% @song.genres.each do |genre| %>
<p><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></p>
<% end %>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>


<h1><%= @song.name %></h1>
<h2>Artist:</h2> <a href=<%="/artists/#{@song.artist.slug}"%>><%= @song.artist.name %></a><br>
<h2>Genres:</h2>
<% @song.genre.each do |genre| %>
  <%= "#{genre.id} - #{genre.name}" %>
  <a href=<%="/genres/#{genre.slug}"%>><%= genre.name %></a>
  <br>
<% end %>

<h1><%= @song.name %></h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Genres:</h2>
<% @song.genres.each do |genre| %>
  <p><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></p>
<% end %>

<h2>Artists:</h2>
<p><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>


<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<h2>Artist name</h2>
    <a href="/artists/<%= @song.artist.slug%>">
    <li><%= @song.artist.name %></a></li>

<h2>Artist's genres</h2>
<% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug%>">
    <li><%= genre.name %></a></li>
<% end %>
</br>
<a href="/songs/<%=@song.slug %>/edit">Edit this song</a>

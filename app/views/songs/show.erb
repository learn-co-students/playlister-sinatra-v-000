<h1>Songs Show</h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><label for="song_name">Name:</label><%= @song.name %></h1>

<h2><label for="artist_name">Artists:</label></h2>
  <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
  <br>

  <h2>Genres:</h2>
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
    <br>
  <% end %>

<% if flash.has?(:message) %>
<p><%= flash[:message] %></p>
<% end %>

<h1>Song: <%= @song.name %></h1>
<h2>By <a href="/artists/<%= @artist.slug %>"><%= @artist.name %></a></h2>
<h2>Genres:</h2>
<ul>
  <% @song.genres.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ul>
<a href="/songs/<%= @song.slug %>/edit">Edit this song</a>

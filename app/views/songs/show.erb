<h1>Show a Song</h1>
<h6>views/songs/show.erb</h6>
<a href="/"><p>Main Page</p></a>
<hr>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>
<h4>by:
<a href="/artists/<%= @song.artist.slug %>">
<%= @song.artist.name %> </a>
</h4>

<br>
<h3>Genres: </h3>
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%=genre.slug%>"><h3> <%=genre.name%> </h3></a>
  <% end %>
<hr>

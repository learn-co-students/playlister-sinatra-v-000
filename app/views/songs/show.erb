<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<span><h1>Show a Song</h1><p>views/songs/show.erb</p></span>

<a href="/"><p>Main Page</p></a>
<hr>

<h3>Song Name: <%= @song.name %> </h3>
<h3>by: <a href="/artists/<%= @song.artist.slug %>">
<%= @song.artist.name %></a></h3>
<br>
<h3>Genres: </h3>
<% @song.genres.each do |genre|%>
  <a href="/genres/<%=genre.slug%>"><h3> <%=genre.name%> </h3></a>
<% end %>
<br>
<a href="/songs/<%=@song.slug%>/edit">Edit Song</a>
<hr>

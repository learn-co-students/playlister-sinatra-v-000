<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>


<p>SONG: <%= @song.name %></p>
<br>
<p>ARTIST: <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></p>
<br>
<p>GENRES:
  <br>
  <br>
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%=genre.slug%>"><%=genre.name%></a><br>
  <% end %>
</p>

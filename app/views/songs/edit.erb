<h2>Edit song <%= @song.name %></h2>
<form action = '/songs' method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Artist name:</label><br>
  <input type="text" name="artist[name]" id="Artist Name" value = "<%= @song.artist.name %>" ><br>
  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %> ><%= genre.name %>
  <% end %>
  <br>
  <input type="submit" value="Save" id="Save">
</form>

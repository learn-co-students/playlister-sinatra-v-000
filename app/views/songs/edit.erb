<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Song Name:</label>
  <input type="text" name="song[name]" value="<%= @song.name %>" id="Name">

  <br></br>

  <label>Artist:</label>
  <input type="text" name="artist[name]" value="<%= @artist.name %>" id="Artist Name">

  <br></br>

  <label>Genres:</label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <br></br>

  <input type="submit" value="Save">
</form>

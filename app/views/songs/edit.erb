<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>UPDATE</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <label>Name:</label><br></br>
  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>"><br></br>
<label>Update artist:</label><br></br>
    <label>name:</label>
      <input  type="text" name="song[artist]" id="Artist Name" value="<%=@song.artist.name%>"></input><br></br>
  <label>Choose an existing Genre:</label><br></br>
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
<% end %><br></br>
  <input type="submit" value="Save">
</form>
<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">

<p><label for="name">Name: </label><input type="text" name="song[name]" id="name" value="<%= @song.name %>"></p>
<p><label for="artist">Artist: </label><input type="text" name="Artist Name" value="<%= @song.artist.name %>" id="artist_name"></p>
<ul style="list-style: none;">
<% @genres.each do |genre| %>
  <li><input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>> <%= genre.name %></input></li>
<% end %>
</ul>
<input type="submit" value="Save">
</form>
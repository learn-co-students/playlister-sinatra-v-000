<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h4>Artist Name: </h4><input type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name %>"><br>

  <h4>Name: </h4><input type="text" name="Name" id="song_name" value="<%= @song.name %>"><br>

  <h4>Genres:</h4>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %><br>
  <% end %>

    <br><br>

  <input type="submit" value="Save">
</form>

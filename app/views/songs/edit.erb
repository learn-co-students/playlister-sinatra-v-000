<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Song Name:</label><br>

  <input type="text" name="Name" id="song_name" value="<%=@song.name%>"><br>

  <label>Artist Name:</label>
    <input  type="text" name="Artist Name" id="artist_name"></input><br>

    <label>Choose from existing genres:</label><br>

    <%@genres.each do |genre|%>
      <input type="checkbox" name="genres[]" id="<%= genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
    <%end%><br>

  <button type="submit" value="Save">Save</button>
</form>

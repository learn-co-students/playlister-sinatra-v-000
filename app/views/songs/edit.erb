<form method="post" action="/songs/<%= @song.slug %>">
	<input type="text" name="song_name" value="<%= @song.name %>">
	<input type="text" name="Artist Name" value="<%= @song.artist.name %>">
	<label>Select Genre(s): </label>
	<% Genre.all.each do |genre| %>
		<label><%= genre.name %></label>
		<input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
	<% end %>
	<input id="hidden" type="hidden" name="_method" value="patch">
	<input type="submit" value="Save">
</form>
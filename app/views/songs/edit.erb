<h1>Edit Song</h1>
<h3><%=@song.name%></h3>

<form action="/songs" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="song_name">Song Name: </label>
  <input type="text" name="song[name]" id="Name"></br>
  <label for="song_artist">Song Artist: </label>
  <input type="text" name="song[artist]" id="Artist Name"></br>
  <label for="song_genre">Song Genre(s):</label></br>
    <%@genres.each do |genre|%>
    <input type="checkbox" name="genres[]" id="<%=genre.name %>" value=<%=genre.id%>><%=genre.name%></br>
    <%end%>
  <label for="song_genre_other">Other:</label>
  <input type="text" name="genre[]">
  <input type="submit" value="Create">


</form>

<h1>Edit Song</h1>
<form  action="/songs/<%=song.slug%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input type="text" name="song[name]" value="<%=@song.name%>">
  <br></br>
  <label>Artist:</label>
  <input type="text" name="artist[name]" value="<%=@song.artist.name%>">
  <br></br>
  <label>Genre(s):</label>
  <%Genre.all.each do |g|%>
    <input type="checkbox" name="genres[]" value="<%=g.id%>" <%='checked' if @song.genres.include?(g)%>><%=g.name%></input>
  <%end%>
  <br></br>
  <input type="submit" value="Update">

</form>

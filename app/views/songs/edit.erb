<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Edit Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label> Song </label>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>"> </br>

  <label> Artist </label>
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name"> </br>

  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
    </br>
  <% end %>
  </br>
  <input type="submit" value="Save">
</form>
<h1>Edit Song</h1>
<form action="/songs/<%=@song.slug%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
<p><label for="Name">Song Name: </label>
<input type="text" name=song[name] id="Name" value="<%= @song.name%>"><p>
<p>Genre:</p>
<p><% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" <%= 'checked' if @song.genres.include?(genre)%> id="<%=genre.name%>"><%= genre.name %></input>
<% end %></p>
<p><label for="Artist Name">Artist Name: </label>
<input type="text" name="song[artist]" id="Artist Name" value="<%=@song.artist.name%>"></input></p>
<input type="submit" value="Save">
</form>
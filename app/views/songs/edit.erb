<h1>Edit a Song</h1>
<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="name">Name</label>
  <input type="text" name="song[name]" value="<%= @song.name %>" id="name">

  <br>

  <h2>Choose an Artist</h2>

  <% @artists.each do |artist| %>
    <input type="checkbox" name="song[artist_checked]" id="<%= artist.name %>" value="<%= artist.name %>" <%= 'checked' if artist.name == @song.artist.name %>><%= artist.name %></input>
	<% end %>

  <h2>Or Create One</h2>

  <label>Artist Name:</label>
  <input type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name %>">
  <br>

  <h2> Genres</h2>
    <% Genre.all.each do |genre| %>
      <label><%= genre.name %></label>
      <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>
      <% end %>
      <br>
    <input type="submit" value="Save">
  </form>

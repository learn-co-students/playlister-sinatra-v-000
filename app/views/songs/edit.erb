<h1>Edit A Song</h1>

<form method="POST" action="/songs/<%= @song.slug %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <h3>Song Name: <input type="text" name="song[name]" value="<%=@song.name%>" id="name"></h3>

  <h3>Song Artist: <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"></h3>

  <h3>Song Genre(s): </h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>

  <input type="submit" id="Save" value="Save">
</form>

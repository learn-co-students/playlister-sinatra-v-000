<h1>Edit Song</h1>
<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name</label>
 <input type="text" name="song[name]" id="name" value="<%= @song.name %>">
   <br></br>

 <label for="artist_name">Artist Name</label>
 <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name">
  <br></br>

  <label for="genre.name">Genre</label>
  <% @genres.each do |genre|%>
      <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
    <% end %>
  <%end%>
      <br></br>
  <input type="submit" name="" value="Save">
</form>

<h1>Update Song</h1>
<form action="/songs/<%= @song.slug %>" method="POST">
<input type="hidden" name="_method" value="patch">

  <div>
    <label for="Name">Name: </label>
    <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">
  </div>

  <div>
    <label for="Artist Name">Artist: </label>
    <input type="text" id="Artist Name" name="song[artist_name]" value="<%= @song.artist.name %>">
  </div>

  <div>
    <% @genres.each do |genre| %>
      <input type="checkbox" id="<%= genre.name %>" name="song[genres][]" value="<%= genre.id %>">
        <%= genre.name %>
      </input>
    <% end %>
  </div>

  <div>
     <input type="submit" value="Save"/>
  </div>
 
</form>
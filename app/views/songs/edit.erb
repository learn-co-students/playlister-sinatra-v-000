<h1>Edit this song:</h1>

<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <h3><label for="Name">Song Name:</label></h3>
  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">
  <h3><label for="Artist Name">Artist Name:</label></h3>
  <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>">
  <h3>Genres:</h3>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%= "checked" if @song.genres.include?(genre)%>><%=genre.name%></input>
  <% end %>
  <br><br><br>
  <input type="submit" id="Save" value="Save">
</form>

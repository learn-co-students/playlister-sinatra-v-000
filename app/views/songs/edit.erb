<h1>Edit a Song</h1>

<form action='/songs/<%= @song.slug %>' method='post'>
   Song Name: <input type='text' name='song[name]' value= '<%= @song.name%>'>
   Artist Name: <input type='text' name='artist[name]' value='<%= @song.artist.name%>' id='Artist Name'>
   <h4>Genre </h4>
   <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %>
  <% end %>
  <input type='submit' id='Save'>
  </form>
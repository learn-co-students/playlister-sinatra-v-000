<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Artist Name</label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>"><br>
  <label>Song Name</label>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>"><br>
  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <p><input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></p>
  <% end %>
  <input type="submit" value="Save">
</form>

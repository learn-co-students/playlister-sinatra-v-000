<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <%# <input type="hidden" name="_method" value="patch"> %>

  <label for="song_name">Name</label>
  <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>">

  <label for="artist_name">Artist Name</label>
  <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>">

  <% Genre.all.each do |genre| %>
    <label><%= genre.name %>
      <input type="checkbox" name="song[genre_ids][]"
             value="<%= genre.id %>" id="<%= genre.name %>"
             <%='checked' if @song.genres.include?(genre) %>>
    </label>
  <% end %>

  <input type="submit" value="Save">
</form>
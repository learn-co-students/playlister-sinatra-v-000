<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="song_name" value="<%=@song.name%>">

  <br></br>

  <label for="artist_name">Artist Name</label>

  <br></br>

  <input  type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>"></input>

  <br></br>

  <label>Genre:</label>
    <% Genre.all.each do |genre| %>
      <%= genre.name %>
      <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
    <% end %>

  <br></br>

  <input type="submit" value="Save">

</form>

<%= @song.name %>

<form action='/songs/<%= @song.slug %>' method='post'>
  <input type="hidden" name="_method" value='patch'>
  
  <label>Name</label>
  <input type="text" name="song[name]" id='name' value='<%= @song.name %>'>

  <label>Artist Name</label>
  <input type="text" name="artist_name" id="Artist Name" value='<%= @song.artist.name %>'>

  <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>>
    <%= genre.name %>
  <% end %>

  <input type="submit" value="Save">
</form> 
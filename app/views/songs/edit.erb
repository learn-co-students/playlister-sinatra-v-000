<h1>songs/edit</h1>

<form class="" action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="artist[name]" value="" id="Artist Name">
  <input type="text" name="songname" value="" id="Name">

  <% Genre.all.each do |genre| %>
  <input type="checkbox" name="genre[genre_id]" value="<%= genre.id %>" id="<%= genre.name %>"<%= 'checked' if @song.genres.include?(genre) %>></input>
  <% end %>
  <input type="submit" name="" value="Save">
</form>

<h1>Edit a Song:</h1>
<form action="/songs/<%=@song.slug%>" method="post">
  <p>Song Name:<input type="text" name="song[name]" id="Name" value="<%=@song.name%>"> </p>
  <p>Artist:<input type="text" name="song[artist]" id="Artist Name"value="<%=@song.artist.name%>"></p>
  <p>Genres:</p>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
    <%=genre.name%></input>
  <%end%>

  <br>
  <br>
  <input type="submit" id="Save" value="save">
</form>

<h1>Edit Song</h1>

<form method="POST" action="/songs/<%= @song.slug %>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="song_name">Name:</label>
    <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>"><br>
    <label for="Artist Name">Artist:</label>
    <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">
    <p>Genres:</p>
    <% Genre.all.each do |genre| %>
    <label for="<%= genre.name %>"><%= genre.name %></label>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" 
      <% if @song.genres.include? genre %>
       checked 
      <% end %>
      ><br>
    <% end %>
    <input type="submit" id="submit" value="Save">
</form>
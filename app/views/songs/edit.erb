<h1>Edit Song: <%= @song.name %> </h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input id = "hidden" type = "hidden" name = "_method" value = "patch">
  <label>Name:</label>

  <br>
  <input type="text" name="song[name]" id="Name" value = "<%= @song.name %>">

  <br>

  <label>Choose an existing genre:</label>

  <br>

  <%@genres.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>"
    <%='checked' if @song.genres.include?(Genre.find_by_name(genre.name)) %>>
    <%=genre.name%></input>
  <%end%>

  <br>


<br>

    <label>Change artist:</label>
    <br>
    <label>Name:</label>
      <input  type="text" name="artist[name]" id="Artist Name"></input>
    <br>

  <input type="submit" value="Save">
</form>

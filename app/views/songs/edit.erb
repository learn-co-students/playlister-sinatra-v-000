<h1>Edit Song</h1>
<form class="" action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch" id="hidden">
  <label for="">Artist:</label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name%>" id="artist">

  <label for="">Song:</label>
  <input id="name" type="text" value="<%= @song.name %>" name="name">

  <label for="">Select Genre:</label><br>
  <% @genres.all.each do |genre|%>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"<%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %><br>
  <% end %>
  <input type="submit" value="Save">
</form>

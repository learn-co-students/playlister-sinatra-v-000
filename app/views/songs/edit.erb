<h1>Update Song</h1>


<form action="/songs/<%=@song.slug%>" method="post">
<input type="hidden" name="_method" value="patch">

<br><br>

<input type="text" name="song[name]" id="name" value="<%=@song.name%>">

<br><br>

<% Genre.all.each do |genre|%>
<input type="checkbox" name="song[genres_ids][]" id="<%=genre.name%>" value="<%=genre.id%>"
<%='checked' if Genre.all.include?(genre)%>><%=genre.name%></input>
<%end%>
<br><br>

<label for="Artist_Name">Artist Name</label>
<input id="Artist_Name" type="text" name="artist[name]" value="<%=@song.artist.name%>"><br>

<input type="submit" value="Save">
</form>
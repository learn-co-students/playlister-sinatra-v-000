<h1>Update Song</h1>

  <form action='/songs/<%=@song.slug%>' method='post'>

    <label for="name">Name</label>
    <input type="text" name="song[name]" id="name" value="<%=@song.name%>"><br><br>

    <label>Artist:</label>
     <input type='text' id="Artist Name" name="artist[name]" value="<%=@song.artist.name%>">

    <label>Genre:</label>
    <% Genre.all.each do |genre| %>
     <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]"><%= genre.name%>
   <% end %>

    <input type="submit" value="Save" id="Save">
 </form>
<h1> <%= @song.artist.name %> - <%= @song.name %> </h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label>Artist Name</label> </br>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>"> <br><br>
  
  <label>Song Name</label> </br>
  <input type="text" name="Name" value="<%= @song.name %>"> <br><br>
  
  <label>Genre: </label> 
  <% Genre.all.each do |genre| %>
  
  <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= "checked" if @song.genres.include?(genre) %> > <%= genre.name %> </input>
  <% end %> <br><br>
  
  <input type="submit" value="Save">
</form>
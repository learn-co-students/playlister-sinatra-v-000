<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch"></input>

  <label>Artist Name<input type="text" name="Artist Name" value="<%=@song.artist.name%>"></label> </br>

  <label for="song_name">Name</label><input id="song_name" type="text" name="Name" value="<%=@song.name%>">

    <br></br>

  <label>Select an Genre
    <%Genre.all.each do |genre|%>
      <label><%=genre.name%>
        <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre) %>>
      </label>
    <%end%>
  </label>

  <br></br>
  <input type="submit" value="Save">
</form>

<% if @success_message %>
<div id="success" style="border: 2px solid green;">
<%= @success_message %>
</div>
<% end %>

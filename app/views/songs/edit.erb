<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br></br>

  <input type="text" id="Name" name="Song Name" value="<%=@song.name%>">

  <br></br>

  <label>Select Artist:</label>

  <br></br>

  <%Artist.all.each do |artist|%>
    <input type="checkbox" <%= "checked" if artist == @song.artist %> name="artist[id]" id="<%=artist.name%>" value="<%= artist.id %>">
    <%=artist.name%></input>
    <%end%>

  <br></br>

  <label>And/or create a new artist:</label>
  <input type="text" name="artist[name]" id="Artist Name">

  <br></br>

  <label>Select genre(s)</label>

  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox"<% "checked" if @song.genre.include?(genre) %> name="genre[]" id="<%=genre.name%>" value="<%= genre.id %>">
    <%=genre.name%></input>
    <%end%>

  <br></br>

  <input type="submit" value="Save">

</form>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label>Artist Name</label>  
  <input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>"></br>
  <label>Song Name</label>
  <input type="text" id="Name" name="song[name]" value="<%= @song.name%>">

  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>


<input type="submit" value="Save">
</form>
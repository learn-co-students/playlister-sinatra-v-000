<h1>Edit Song:</h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Song Name:</label>
  <input type="text" name="song[name]" value="<%= @song.name %>">
  <br><br>

  <label for="artist_name">Artist Name:</label>
  <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>">
  <br><br>

  <label for="genres">Genres:</label><br>
  <% Genre.all.each do |genre| %>
    <label><%= genre.name.capitalize %></label>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>> <br>
  <% end %>

  <input type="submit" value="Save">
</form>

<h2>Edit Song</h2>


<form method="post" action="/songs/<%=@song.slug %>">
    <label for="Name">Song Name</label>
    <input type="text" name="song[name]" id="Name" value="<%= @song.name%>"><br>
    <label for="Artist Name">Artist</label>
    <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name%>"><br>
    <label>Genre(s)</label><br>
    <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name%>" name="genres[]" value="<%= genre.id%>" <%= 'checked' if @song.genres.include?(genre)%>><%= genre.name.capitalize%><br>
    <% end %>
    <input type="submit" value="Save" >
</form>
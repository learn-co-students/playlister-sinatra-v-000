<h1>Edit Song</h1>
<form action="/songs/<%=@song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="song_name">Name</label><input type="text" id="song_name" name="song_name" value="<%=@song.name%>"><br/>
  <label for="artist_name">Artist Name:</label><input type="text" id="artist_name" name="artist_name" value="<%=@song.artist.name%>"><br/>
  <label for="genre">Genres:</label><br/>
  <%@genres.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre) %>>
      <%=genre.name%>
    </input>
  <%end%>
  <br/>
  <button type="submit" value="submit">Save</button>
</form>

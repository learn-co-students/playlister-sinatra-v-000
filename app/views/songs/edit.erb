<form action ="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Name:</label><input type="text" name="song[name]" id="name" value="<%=@song.name%>"></input>
  <label>Artist Name:</label><input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"></input>

<label> Choose Genres: </label>
  <br>

  <% @genres.each do |genre| %>

    <input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>" <%= 'checked' if @song.genres.include?(genre)%>> <%=genre.name%></input>

    <%end%>

    <input type="submit" value="Save">
  </form>

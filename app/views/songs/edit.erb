
<h1>Edit A Song</h1>


  <form action="/songs/<%= @song.slug %>" method="post">
    <input type="hidden" name="_method" value="PATCH">
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>">
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>" id="Artist Name">
    
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genre_ids.include?(genre.id) %>><%= genre.name %></input>
    <% end %>
    <input type="submit" value="Save">
  </form>


<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label>Song Name: </label>
  <input type="text" name="song[name]" value="<%= @song.name %>" id="song_name">
  <br>

  <label>Artist: </label>
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name">
  <br>

  <label>Genres</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"
    <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %>
  </input>
  <% end %>

  <input type="submit" value="Save">

</form>

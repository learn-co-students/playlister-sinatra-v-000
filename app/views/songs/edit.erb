<h1>edit song</h1>
<h3>Song:  <%= @song.name %></h3>
<form action="/songs/<%= @song.slug %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="">Artist Name:</label>
  <input type="text" name="song[artist]" id="Artist Name" value="<%= @song.artist.name %>">
  <br></br>
  <label>Change genre(s):</label>

  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre) %> ><%=genre.name%></input>
  <%end%>

  <br></br>
  <label>and/or, create a new genre:</label>
  <br></br>
  <label>name:</label>
    <input type="text" name="genre[name]"></input>
  <br></br>
  <input type="submit" value="Save">
  <!-- <input type="submit" value="Save" id="Save"> -->
</form>

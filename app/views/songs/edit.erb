

<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

<p><label for="artist_name">Artist Name</label>
  <input type="text" name="artist_name" id="artist_name" value="<%= @song.artist.name %>"></p>

<p><label>Genres</label></p>
  <% Genre.all.each do |genre| %>
  <labe><%= genre.name %></label>
  <input id="<%= genre.name %>" type="checkbox" name="[genres][]" value="<%= genre.id %>"
  <%='checked' if @song.genres.include?(genre) %>>
<% end %>

<p><input type="submit" value="Save"><p>
</form>

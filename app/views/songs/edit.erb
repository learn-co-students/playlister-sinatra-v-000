<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  
  <p>
    <label for="Name">Song Name:</label>
    <input type="text" name="name" id="Name" value="<%=@song.name%>">
  </p>
  <p>
    <label for="Artist Name">Artist Name:</label>
    <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>">
  </p>

  <!-- genres should be presented as checkboxes -->
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name %></input>
  <% end %>
  <br><br>
  <input type="submit" value="Save">
</form>

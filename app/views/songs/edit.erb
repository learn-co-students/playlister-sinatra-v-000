<h1>Edit a song</h1>
<h3><%= @song.name %></h3><br>
<form action="/songs/<%= @song.slug %>" method="POST">
<input type="hidden" name="_method" value="patch">
  Change Artist:
  <input type="text" name="Artist Name" value=""><br><br>
  Edit Genre:
  <% Genre.all.each do |genre| %><br>
  <input type="checkbox" name="Genre[]" value="<%= genre.id%>" id="<%=genre.name%>" <%= 'checked' if @song.genre_ids.include?(genre.id)%> >
    <%= genre.name %><br>
  </input>
  <% end %>

  <input type="submit" name="name" value="Save">
</form>

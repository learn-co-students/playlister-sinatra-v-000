<h1> Edit Song Below </h1>

<form action="/songs/<%=@song.slug%>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <label for="song_name">Song Name: </label>
    <input type="text" name="song[name]" id="name" value="<%=@song.name%>"><br/>

    <label for="artist">Artist Name: </label>
    <input id="Artist Name" type="text" name="artist[name]" value="<%=@song.artist.name%>"><br/><br/>

    <label for="genres">Choose the Genres of Your New Song</label><br/>
    <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>> <%=genre.name%><br/>
    <% end %>

<input type="submit" id="submit" value="Save">
</form>


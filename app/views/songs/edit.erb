<h1>Edit Your Song: <%= @song.name %></h1>

<form class="" action="/songs/<%= @song.slug %>/" method="post">
  <input type="hidden" name="_method" value="patch" id="hidden">
  <h3>Edit Artist: <input type="text" name="artist_name" id="Artist Name" placeholder="<%= @song.artist.name %>"></h3>

  <h3>Edit Genres: </h3>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %> ><%= genre.name %></input>
  <% end %>
  <br><br>
  <input type="submit" value="Save">
</form>

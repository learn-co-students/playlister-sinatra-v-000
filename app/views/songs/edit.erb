<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

    <label>Name:</label>
    <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>"></input>
    <br></br>

    <label>Artist Name:</label>
    <input type="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name%>"></input>

    <br></br>

    <label>Choose a Genre:</label>
    <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%='checked' if @song.genres.include?(genre) %>><%=genre.name%> %></input>
    <% end %>
    <br></br>

    <input type="submit" value="Update Song"></input>
  </form>

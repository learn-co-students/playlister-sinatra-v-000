<h1>Edit  Song:<%= @song.name %></h1>

<form class="" action="/songs/<%=@song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="song_name" value="<%= @song.name %>" placeholder = "Name"><br> <br>
  <h2>Enter The Artist's Name</h2>
    <input type="text" name="artist_name" value="<%= @song.artist.name %>" placeholder="Artist Name">
    <br>
    <label>Genres</label><br>
    <% Genre.all.each do |genre| %>
      <%= genre.name %>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= "checked" if @song.genres.include?(genre) %>>


    </br>

    <% end %>

  <input type="submit" name="" value="Save">



</form>

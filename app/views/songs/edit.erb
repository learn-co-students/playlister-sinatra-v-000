<form action="/songs/<%=@song.slug%>" method="post">
 <input type="hidden" name="_method" value="PATCH">
 <label>Name</label>
<input type="text"  id="name" name="song[name]" value="<%=@song.name%>">
<label>Artist Name</label>
<input type="text" id="Artist Name" name="artist[name]" value="<%=@song.artist.name%>" >
<% Genre.all.each do |genre| %>
  <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>" <%= 'checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <br></br>
<%end%>
  <input type="submit" value="Save">
</form>


<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="post">
  Artist: <input type="text" name="Artist Name" value="<%= @song.artist.name %>"><br>
  Song: <input type="text" name="Name" value="<%= @song.name %>"><br>
  Select Genre: <br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
  <% end %>
  <input type="submit" value="Save">
</form>
<h1>Update song</h1>

<form action="/songs/<%=@song.slug%>" method="post">

  <label>Name: </label>
  <input type="text" name="song[name]" id="song_name" value="<%=@song.name%>">
  <br></br>

  <label>Artist Name:</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>">
  <br></br>

  <label>Genre:</lable>
  <br></br>
  <%Genre.all.each do |genre|%>
    <label><%=genre.name%></label>
    <input type="checkbox" name="song[genres_ids][]" value="<%= genre.id%>"
    id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre) %>>
  <%end%>

  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
  <br></br>

  <input type="submit" value="Save">
</form>

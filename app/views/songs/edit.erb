<h1>Edit <%=@song.name %></h1>


<form action="/songs/<%= @song.slug %>" method="POST">
<input type="hidden" name="_method" value="PATCH">

    <label> Name </label>
    <br>
    <input type="text" name="Name" id="song_name" value="<%= @song.name %>">
    <br>

    <label> Artist </label>
    <br>
    <input type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name %>">
    <br>
    <br>
    <label> Genres </label> <br>
      <% Genre.all.each do |genre| %>
        <li><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %> ><%= genre.name %></li>
      <% end %>
      <br>

    <input type="submit" value="Save">

</form>

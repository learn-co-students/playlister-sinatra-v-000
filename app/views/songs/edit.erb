<h1>Update song</h1>
<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label>Name: </label><input type="text" name="Name" value="<%=@song.name%>"></p>

  <p><label>Artist: </label><input type="text" name="Artist Name" value="<%=@song.artist.name%>"></p>

  <p><label>Genres: </label>
  <% Genre.all.each do |genre| %>
    <input id="<%=genre.name %>" type="checkbox" name="genres[]" value="<%=genre.id %>" <%='checked' if @song.genres.include?(genre) %>>
    <%=genre.name %></input>
  <% end %>
  <p><input type="submit" value="Save"></p>
</form>

<p><%=@song.name%></p>
<p><a href='/artists/<%=@song.artist.slug%>'><%=@song.artist.name%></a></p>
<%@song.genres.each do|genre|%>
<p><a href='/genres/<%=genre.slug%>'><%=genre.name%></a></p>
<% end %>

<form method='POST' action='/songs/<%=@song.slug%>'>
  <input type="text" id ="Name" name="Name">
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include? (genre) %>><%=genre.name%>
<% end %>
<input type="text" name="Artist Name">
<input id="hidden" type="hidden" name="_method" value="patch">
<input id="submit" type="submit" value="Save">
</form>

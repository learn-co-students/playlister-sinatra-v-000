<h1>Update Song:</h1>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Song Name:</label>
  <input type="text" name="Name" id="Name" value="<%= @song.name%>">
  <br></br>
  <label>Song Artist:</label>
  <input type="text" name="Artist Name" id="artist_name" value = "<%=@song.artist.name%>">
  <br></br>
  <p>Select the Genres: </p>
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%= genre.name%>"  <%='checked' if @song.genres.include?(genre) %>><%=genre.name%>
  <%end%>
  <input type="submit" value="Save">
</form>

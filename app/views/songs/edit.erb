<div class="jumbotron">
	<h2>Edit Song</h2>
</div>
<div class="container">
	<form action="/songs/<%= @song.slug %>/edit" method="post">
		<div class="form-group">
		<div class="form-group">
		<label for=""><h4><%=@song.name%></h4></label>
		</div>
		<label for="">Artist Name:<input placeholder= "<%=@song.artist.name%>" class="form-control" type="text" name="artist_name"></label>
		</div>
		<div class="form-check">
		<label class="form-check-label">Genre:
		<br>
		 <%  Genre.all.each do |genre|%>
			<input class="form-check-input" type="checkbox"  id="<%=genre.name%>" name="song[genre][]" value="<%=genre.name%>" <%='checked' if @song.genres.include?(genre)%> > <%=genre.name%></input>
		<% end %>
		</label>
		</div>
		<div class="form-group">
			<br>
		 	<button type="submit" class="btn btn-primary">Save</button>
		</div>
	</form>
</div>
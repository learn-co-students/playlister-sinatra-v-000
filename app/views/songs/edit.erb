<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <label for="name">Name</label><br>
  <input type="text" name="Name" value="<%= @song.name %>">
  <br></br>
  <label>Artist</label>
  <% Artist.all.each do |artist| %>
  <input type="radio" name="Artist" value="<%= artist.id %>" <%= 'checked' if @song.artist.id == artist.id %>><%= artist.name %></input>
  <% end %>
  <label>New artist</label>
  <input type="text" name="Artist Name">
  <br></br>

  <label>Genres</label>
  <% Genre.all.each do |genre| %>
  <input type="checkbox" name="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <input type="submit" value="Save">

</form>

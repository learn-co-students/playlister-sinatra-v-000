<h1>Update Song</h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <p>Name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>"></p>

  <p>Choose an existing genre:</p>

  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <p>Artist Name: <input type="text" name="artist[name]" id="Artist Name" value="<%= @artist.name %>"></p>

  <input type="submit" value="Save">
</form>

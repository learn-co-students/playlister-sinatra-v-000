
<form method="POST" action="/songs/<%=@song.slug%>">
  
  <p><input type = "text" name="song_name" value="<%=@song.name%>">Song Name</p>
  
  <p><input type = "text" name="artist_name" id = "Artist Name" value="<%=@song.artist.name%>" >Artist Name</p>


  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
  <% end %>
  
  <input type = "submit" value = "Save">
 
 </form>


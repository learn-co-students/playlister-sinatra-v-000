<h1>Edit Song Details</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song_name" value="<%= @song.name %>" id="Name">

  <br></br>

  <label>Choose an existing artist:</label>

  <br></br>

  <%Artist.all.each do |artist|%>
    <input type="radio" name="artist_id" id="<%=artist.id%>" value="<%=artist.id%>"
    <%= 'checked' if artist.songs.include?(@song) %>><%=artist.name%></input>
  <%end%>

  <br></br>

    <label>Or, create a new artist:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="artist_name" id="Artist Name"></input>

    <br></br>

    <label>Choose a new genre for your song:</label>

    <br></br>

    <% Genre.all.each do |genre| %>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"
      <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
    <% end %>

    <br></br>

    <input type="submit" value="Save">
</form>

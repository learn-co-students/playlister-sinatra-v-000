<h1>Edit Song</h1>
<form action="/songs/<%=@song.slug%>" method="POST">
 <input id="hidden" type="hidden" name="_method" value="patch">

   <label for="name">Name</label>
   <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">

   <label for="artist_name">Artist Name</label>
   <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name"> </br>

   <label> Genres </label>
   <% Genre.all.each do |genre| %>
      <label><%= genre.name %></label>
      <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %>
    <% end %>

   <input type="submit" value="Save">
 </form>

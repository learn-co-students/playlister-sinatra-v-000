<h1>Edit Song</h1>
<form class="" action="/songs/<%=@song.slug%>" method="post">
<input type="hidden" name="_method" value="patch">
<label>Song Name:</label>
<input type="text" id="Name" name="song[name]" value="<%=@song.name%>">
<br>
<label>Artist Name:</label>
<input type="text" id="Artist Name" name="artist[name]" value="<%=@song.artist.name%>">
<br>
<% Genre.all.each do |genre|%>
<input type="checkbox" id="<%=genre.name%>" name="genres[]" value="<%=genre.id%>" <%= "checked" if @song.genres.include?(genre)%>><%=genre.name%></input><br>
<%end%>
<input type="submit" id="Save" name="Save" value="Save">
</form>

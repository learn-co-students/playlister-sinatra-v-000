<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">

<label>Name</label>
<br><br>
<input type="text" name="song[name]" id="Name" value="<%=@song.name%>">

<br><br>

<label>Edit Artist:</label>

<br><br>

<input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>">
<br><br>

<label>Edit Genre:</label>

<br><br>

<% @genres.each do |genre| %>
<input type="checkbox" id="<%=genre.name%>" value="<%=genre.id%>" name="genre[]"><%='checked' if @song.genres.include?(genre)%><%=genre.name%></input>
<%end%>

<br><br>

<input type="submit" id="Save" value="Update Song">
</form>

<h1>Edit <%=@song.name%></h1>

<form action = "/songs/<%=@song.slug%>/edit" method = "POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Song Name:</label>
  <input type = "text" name = "song[name]" id = "Name" value = "<%=@song.name%>">
  <br><br>
  <label>Artist Name: </label>
   <input type="text" name="song[artist_name]" id="Artist Name" value="<%=@song.artist.name%>">
  <br><br>
  <label>Select Genre(s):</label>
  <br><br>
  <% Genre.all.each do |genre| %>
  <input type = "checkbox" name = "genres[]" value = "<%=genre.id%>" id = "<%=genre.name%>"><%='checked' if @song.genres.include?(genre)%><%=genre.name%></input>
  <br>
  <% end %>

  <br><br>
  <input type = "submit" value = "Save">
</form>

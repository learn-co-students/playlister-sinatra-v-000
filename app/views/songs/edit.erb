<h1>Update Song</h1>

<form action="/songs/edit/<%=@song.id%>" method="POST">

<label>Artist</label>
  <input type="text" name="song[artist]" id="Artist Name" value="">

  <br></br>
    <%Genre.all.each do |genre|%>
      <input type="checkbox" name="song[genre_id]" value="<%=genre.id%>" id="<%=genre.name%>"</input>
      <br>
    <%end%>
  <br></br>



<br></br>
  <%Artist.all.each do |artist|%>
    <input type="checkbox" name="song[artist_id]" value="<%=artist.id%>" id="<%=artist.name%>" <%='checked' if @song.artist.name == artist.name %>><%=artist.name%></input>
    <br>
  <%end%>
  <br></br>

  <input type="submit" value="Save">


</form>

<h1>Edit song</h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  Artist Name: <input type="text" name="Artist Name" value="<%= @song.artist.name %>"></br>

  Song Name: <input type="text" name="Name" value="<%= @song.name %>"></br>

  
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>

  <input type="submit" value="Save">
</form>
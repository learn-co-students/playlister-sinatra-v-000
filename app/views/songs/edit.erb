
<h1>Update Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
<input type="hidden" value="patch" name="_method">
  <label>Song Name:</label>


  <input type="text" name="song[name]" id="Song Name" value="<%= @song.name %>">


  <label>Artist Name:</label>
  <input type="text" name="song[artist]" id="Artist Name" value="<%= @song.artist.name %>">

  <label>Choose an existing genre: </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>
  <input type="submit" value="Save">

</form>
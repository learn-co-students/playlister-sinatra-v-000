<h1>Edit this song: <%= @song.name %></h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  Song Name: <input type="text" name="Name" value="<%= @song.name %>">
  Artist Name: <input type="text" name="Artist Name" value= <%=@song.artist.name %>>
  
  <% Genre.all.each do |genre| %>
    <label><%= genre.name %></label>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>
  
  <input type="submit" id="submit" value="Save">
</form>
<form method="post" action="/songs/<%= @song.slug %>">
    <label>Song Name:</label>
    <input type="text" name="name" id="Name" value="<%= @song.name %>">

    <br></br>
    <label>Artist Name:</label>
    <input type="text" name="Artist Name" id="Artist Name" value="<%= @song.artist.name %>">

    <br></br>
    <label>Genre:</label>
    <% @genres.each do |genre| %>
        <input type="checkbox" name="genre.id" value="<%=  genre.name %>" id="<%=  genre.name %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
    <%end%>

    <br></br>
    <button type="submit" name="Save">Save</button> 
</form>
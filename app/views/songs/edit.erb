<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Edit Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <br><label>Artist Name: </label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>" id="artist_name"></br>
  <br><label>Song Name: </label>
 <input type="text" name="song[name]" value="<%= @song.name %>" id="name"></br>

 <br><label>Genres</label></br>
  <% Genre.all.each do |genre| %>
    <label><%= genre.name %></label>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %></br>

 <input type="submit" value="Save">

</form>

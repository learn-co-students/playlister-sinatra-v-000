<h1>Update Song</h1>
<form action="/songs/<%=@song.slug%>" method="POST">
  <label>Name:</label>
 
  <br></br>
 
  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">
 
  <br></br>
 
  <label>Choose an existing artist:</label>
 
  <br></br>
 
  <%Artist.all.each do |artist|%>
    <input type="radio" name="song[artist_id]" id="<%=artist.id%>" value="<%=artist.id%>"<%=artist.name%><%='checked' if @song.artist = artist %>><%=artist.name%></input>
  <%end%>
 
  <br></br>
 
    <label>and/or, create a new artist:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="artist[name]" id="Artist Name"></input>
    <br></br>

  <label>Choose an existing genre:</label>

  <br></br>
 
  <% Genre.all.each do |genre| %>
    <input id="<%=genre.name%>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"<%='checked' if @song.genres.include?(genre)%> > <%=genre.name%>></input>
  <% end %>
 
  <br></br>
 
    <label>and/or, create a new genre:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="genre[name]" id="genre_name"></input>
    <br></br>
  <input type="submit" value="Save">
</form>
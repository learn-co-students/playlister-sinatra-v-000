<h1>Edit a Song</h1>
<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Song Name: <input type="text" name="Name" value="<%= @song.name %>"/></label><br /><br />
  <label>Artist Name: <input type="text" name="Artist Name" value="<%= @song.artist.name %>"/></label><br /><br />
  <label>Genre(s):</label>
  <% Genre.all.each do |genre| %>
    <%= genre.name %><input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>"/>
  <% end %>
  <br /><br />
  <input type="submit" value="Save" />
</form>

<h1>Edit song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
    <label>Artist Name</label>
  <input type="text" name="artist_name" value="<%= @song.artist.name %>"></br>

  <label>Song Name</label>
  <input type="text" name="song_name" value="<%= @song.name %>"></br>

  <label>Genres</label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
  <% end %>

  <input type="submit" value="Save">
</form>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<!DOCTYPE html>

<h1>Edit a Song</h1>
<form action="/songs" method="POST">
  <label>Song Name:</label>
  <%=@song.name%>
  <br></br>
    Artist Name: <input  type="text" name="Artist Name" id="Artist Name" value="<%=@song.artist.name%>">
  <br></br>
    <%@genres.each do |genre|%>
      Genres: <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>" <%='checked' if genre.id == @song.genre_id%>><%=genre.name%>
      <%end%>
  <br></br>
    <input type="submit" value="Save">
</form>

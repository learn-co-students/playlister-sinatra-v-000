<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">

  <label> Edit Song Name:</label> <br>
  <input type="text" name="Name" value ="<%= @song.name %>">
  <br><br>

  <label>Edit Artist:</label>
  <input  type="text" name="Artist Name" value ="<%= @song.artist.name %>"></input><br><br>

  <label>Edit Genres:</label><br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genre_ids[]" value="<%= genre.id %>" id="<%= genre.name %>" <%="checked" if @song.genres.include?(genre) %>>
    <%= genre.name %></input><br>
  <% end %>
  <br><br>

  <br>
  <input type="submit" value="Save">
    <input id="hidden" type="hidden" name="_method" value="patch">
</form>

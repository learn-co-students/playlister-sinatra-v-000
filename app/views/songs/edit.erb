<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  
  <label>Name:</label>
  <br></br>
  <input type="text" name="Name" id="Name" value="<%=@song.name%>"></input>
  <br></br>

  <label>Artist:</label>
  <br></br>
  <input type="text" name="Artist Name" id="Artist Name" value="<%=@song.artist.name%>">
  <br></br>

  <label>Genre:</label>
  <br></br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name%>" type="checkbox" name="genres[]" value="<%= genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%>
    <br></br>
  <%end%>

  <input type="submit" value="Save">

</form>
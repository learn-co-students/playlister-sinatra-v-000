<h1>Edit <%= @song.name %></h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Song Name:</label>
  <input type="text" name="song[name]" id="Song Name" value="<%= @song.name %>"/><br />
  <br />

  <label for="">Artist Name:</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"/><br />
  <br />

  <% Genre.all.each do |genre|%>
    <label><%= genre.name %></label>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>"<%='checked' if @song.genres.include?(genre) %> /><br />
  <% end %>
  <br />
  <input type="submit" name="submit" value="Save">
</form>

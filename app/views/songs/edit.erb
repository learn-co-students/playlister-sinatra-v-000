<h1>Edit <%=@song.name%></h1>

<form action="/songs/edit/<%=@song.id%>" method="POST">

  <input type="hidden" name="_method" value="PATCH">

  <h2>Update Artist</h2>
  <label for="name">Name</label>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>">

  <label for="artist_name">Artist Name</label>
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name">

  <h2>Update Genre</h2>
  <br></br>
    <%Genre.all.each do |genre|%>
      <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"<%='checked' if @song.genres.include?(genre) %>> <%=genre.name%></input>
      <br>
    <%end%>
  <br></br>




  <input type="submit" value="Save">


</form>

<h1>Edit a Song</h1>

<form method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="song">Name</label>
  <br></br>
  <input type="text" id="song" name="song" value="<%=@current_song.name%>">
  <br></br>
  <label for="artist">Artist Name</label>
  <br></br>
  <input type="text" id="artist" name="artist" value="<%=@current_song.artist.name%>">
  <br></br>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @current_song.genres.include?(genre)%>> <%=genre.name%>
  <% end %>

  <input type="submit" value="Save">
</form>

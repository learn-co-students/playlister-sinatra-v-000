<h3>Update an Existing Song</h3>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>
    <label>Name: </label>
    <input id="song_name" type="text" name="Name" value="<%=@song.name%>">
  </p>

  <p>
    <label>Artist Name: </label>
    <input id="artist_name" type="text" name="Artist Name" value="<%=@song.artist.name%>">
  <p>

  <label>Genre(s):</label><br>

    <% Genre.all.each do |genre| %>
      <input id="<%=genre.name%>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <%='checked' if @song.genres.include?(genre) %> <%=genre.name%><br>
    <% end %>

  <br>

  <input type="submit" value="Save">
</form>

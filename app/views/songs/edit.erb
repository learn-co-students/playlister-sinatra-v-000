<h1>Edit:</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  Song Name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>"><br><br>
  Artist Name: <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"><br><br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%>
  <%end%><br>
  <input type="submit" value="Save">
</form>


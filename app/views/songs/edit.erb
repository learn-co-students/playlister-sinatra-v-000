

<header> Edit Song</header>

  
  
  <form action="/songs/<%= @song.slug %>" method="POST" accept-charset="utf-8">
  <input type="hidden" value="patch" name="_method" id="hidden"/>

  
  <h2>Name: <input type="text" name="song[name]" value="<%= @song.name%>"></h2>

 
 <h2>Artist:<input type="text" id="Artist Name" name="artist[name]" value="<%= @song.artist.name %>"></h2>



<h2>Genre:   </h2>

<p> <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"  <%='checked' if @song.genres.include?(genre) %>><%= genre.name %> </input>
  <% end %>
</p>
  <input type="submit" value="Save">
</form>
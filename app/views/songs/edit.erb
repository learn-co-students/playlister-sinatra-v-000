<h1>Update <%=@song.name%></h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="song_name" value="<%=@song.name%>">

  <br></br>

  <label>Choose an existing Artist:</label>

  <br></br>

  Artist Name: <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>">

  <br></br>

  <%Genre.all.each do |g|%>
    <input type="checkbox" name="song[genre_ids][]" id="<%=g.name%>" value="<%=g.id%>"><%=g.name%></input>
  <%end%>
  <br></br>

  <input type="submit" value="Save">
</form>

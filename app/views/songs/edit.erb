<h1>Edit Song!</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label for="artist_name">Artist Name </label>
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name">

  <br></br>

  <label for="name">Song Name </label>
  <input type="text" name="song[name]" value="<%= @song.name %>" id="name">

  <br></br>

  <label>Genre(s)</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"
    <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <br></br>

  <input type="submit" value="Save">
</form>

<h2>Edit <%= @song.name %></h2>

<form method="POST" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="patch" />
  <input name="song[name]" type="text" id="song_name" value="<%= @song.name %>" /><br /><br />
  <input name="song[artist]" type="text" id="artist_name" placeholder="Artist Name" /><br /><br />
  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input><br />
  <% end %>
  <br />
  <input type="submit" value="Save" />
</form>

<form method="post" action="/songs/<%= @song.slug %>/edit">
  Name<input type="text" id="Name" name="song[name]">
  Artist Name<input type="text" id="Artist Name" name="artist[name]">
  Genres
  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%= 'checked' if Genre.all.include?(genre) %>>
  <% end %>

  <input type="submit" value="Save">
</form>

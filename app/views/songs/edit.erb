<h1>Edit a song!</h1>

<form method="post" action="/songs">
  <input type="hidden" name="_method" value="patch">
  <label for="Name">Song Name:</label>
  <input type="text" id="Name" name="song[name]" value="<%=@song.name%>"><br>
  <label for="Artist Name">Artist Name:</label>
  <input type="text" id="Artist Name" name="song[artist][name]" value="<%=@song.artist.name%>"><br>
  <label>Genres:</label><br>
  <% Genre.all.each do |genre| %>
    <label for=<%=genre.name%>><input type="checkbox" id=<%=genre.name%> name="song[genre_ids][]" value=<%=genre.id%> <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></label>
  <% end %>
  <input type="hidden" name="song[id]" id="Song ID" value=<%=@song.id%>>
  <button type="submit" id="Save">Save</button>
</form>

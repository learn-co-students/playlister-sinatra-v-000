<h2>Edit Song</h2>
<form action="/songs/<%= @song.slug %>" method='post'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Song Name:</label>
  <input type="text" name="song_name" id="Name" value="<%= @song.name %>">
  <br></br>

  <label>Artist:</label>
  <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>">
  <br></br>

  <label>Genre:</label>
  <br></br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>" <%= 'checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
  <% end %>

  <br></br>
  <input type="submit" value="Save">

</form>

<h1>Edit song:</h1>

<form action="/songs/<%=@song.slug%>" method="post">

	<label for="Name">Song Name:</label><br>
	<input type="text"  name="name" id="Name" value="<%=@song.name%>"><br><br>

	<label>Genres: </label><br>
	<% Genre.all.each { |genre| %>
		<input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>" <%= 'checked' if @song.genres.include?(genre) %>>
		<label for="<%=genre.name%>"><%=genre.name%></label>
	<% } %>
	<br><br>
	<label for="Artist_Name">Artist Name:</label><br>
	<input type="text" name="artist_name" id="Artist_Name" value="<%=@song.artist.name%>"><br>

	<input type="submit" value="save" id="Save">
</form>
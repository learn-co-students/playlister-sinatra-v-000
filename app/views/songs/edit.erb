<h1>Create a new Song</h1>

<form action="/songs/:slug" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Song Name: <%= @song.name %> </label>
  <input type="text" name="song_name" id="Name">

  <br></br>

  <label>Artist name: <%= @song.artist.name %> </label>
    <input  type="text" name="artist_name" id="Artist Name">
  <br></br>

  <label>Choose existing genres:</label>
  <br></br>

  <%@genres.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%></input>
  <%end%>
  <br></br>


  <input type="submit" value="Save">

</form>

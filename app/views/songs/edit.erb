<h3>Edit Song</h3>

<form action="/songs/<%= @song.slug %>" method="post">
  <label>Name: </label><input id="Name" type="text" name="name" value="<%= @song.name %>">
  <br><br>
  <label>Artist: </label><br>
  <input id="Artist Name" type="text" name="artist" value="<%= @song.artist.name %>"><br><br>

  <label>Genre: </label><br>
    <% Genre.all.each do |genre| %>
      <input type="checkbox" name="genre" value="<%= genre.name %>" id="<%= genre.name %>">
        <%= genre.name %>
      </input><br>
    <% end %>

  <input id="Save" type="submit" name="submit" value="Save Song">
</form>

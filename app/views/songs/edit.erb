<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" id="hidden" name="_method" value='patch'>
  <input type="text" name="name" value="<%=@song.name%>" id="name">
  <input type="text" name="artist_name" value="<%=@song.artist.name%>" id="Artist Name">
  <input type="text" name="name" value="<%=@song.name%>" id="name">

  <%@genres.each do |g| %>
  <%genre = Genre.find(g.id)%>
  <%binding.pry%>
  <input type="checkbox" id='<%=genre.name%>' value="genre" <%= 'checked' if @song.genres.include?(genre.name) %>>
  <%end%>
  <input type="submit" value="Save">
</form>

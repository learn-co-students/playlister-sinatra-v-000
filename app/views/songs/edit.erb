<h1>Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<label>Song Name:</label>
<br></br>
<input type="text" name="Name" id="song_name" value="<%=@song.name%>">
<br></br>

<label>Artist Name:</label>
<br></br>
<input type="text" name="Artist Name" id="artist_name" value="<%=@song.artist.name%>">
<br></br>

<label>Choose a Genre:</label>
  <br></br>
  <%Genre.all.each do |genre|%>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%></input>
    
  <%end%>
  <br></br>

<input type="submit" value="Save">Save</input>

</form>

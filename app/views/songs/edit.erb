<html>
  <head>
    <meta charset="UTF-8">
    <title>Edit Song</title>
  </head>
  <body>

    <form action="/songs/<%= @song.slug %>" method="post">
      <input type="hidden" name="_method" value="patch">
      
      <label>Song Name:</label>
      <input type="text" name="Name" id="song_name" value="<%= @song.name %>">

      <br /><br />

      <label>Artist Name:</label>
      <input type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name%>">

      <br /><br />

      <label>Genres</label>
      <% Genre.all.each do |genre| %>
        <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
      <% end %>

      <input type="submit" id="submit" value="Save">

  </body>
</html>

<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Name:</label>

  <br></br>

  <input type="text" name="Name" id="owner_name" value="<%=@song.name%>"></input>

  <br></br>
  <label>Choose Artist:</label>
  <br></br>
  <% Artist.all.each do |artist| %>
    <input type="radio" name="artist[name]" id="<%=artist.name%>" value="<%=artist.name%>"<%='checked' if @song.artist.name == artist.name %>><%=artist.name%></input>
  <%end%>
  <label for "Artist Name">Or, create a new artist</label>
    <input type="text" name="Artist Name" id="artist_name"></input>
  <br></br>

  <label>Choose an existing Genre:</label>

  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new genre:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="genre[name]" id="genre_name"></input>
  <br></br>
  <input type="submit" value="Save">
</form>

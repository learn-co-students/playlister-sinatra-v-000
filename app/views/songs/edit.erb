<h1>Edit Song!</h1>
<form action="/songs/<%= @song.slug %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
Song Name: <input type="text" name="song[name]" value="<%= @song.name %>" id="Name"><br>
Artist Name: <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name"><br>
<h3>Genres</h3>
<% Genre.all.each do |genre| %>
  <input <%= "checked" if @song.genres.include?(genre) %>
    id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>">
    <%= genre.name %><br>
<% end %>
<input type="submit" value="Save">
</form>

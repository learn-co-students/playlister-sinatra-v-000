<h1>Edit Song</h1>
<form method="post" action="/songs/<%=@song.slug%>/edit">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<label for="song_name">Song Name:</label>
	<input type="text" name="name" id="song_name" value="<%=@song.name%>">
		<br>
	<label for="song_artist">Song Artist:</label>
	<input type="text" name="artist" id="Artist Name" value="<%=@song.artist.name%>">
		<br>
	<label>Song Genre:</label>
	<%Genre.all.each do |genre|%>
		<input type="checkbox" id="<%=genre.name%>" name="genres[]" value="<%=genre.id%>" <%='checked' if genre.songs.include?(@song) %>><%=genre.name%></indput>
	<%end%>
	<br>
	<input type="submit" value="Save">
</form>
<p>Successfully updated song.</p>

<form method="post" action="/songs/<%=@song.slug%>">

  <input type="hidden" name="_method" value="PATCH">

  <label>Artist Name</label>
  <input type="text" id="Artist Name" name="artist[name]" value="<%=@song.artist.name%>"></input>
  <label>Song Name</label>
  <input type="text" id="Song Name" name="song[name]" value="<%=@song.name%>"></input>
  <label>Genre(s)</label>
    <% Genre.all.each do |genre| %>
       <input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
    <% end %>

    <input type="submit" value="Save">
    </input>

</form>

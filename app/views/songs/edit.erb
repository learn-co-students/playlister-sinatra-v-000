<h1>Edit Song - <%= @song.name %></h1>
<br></br>

<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="song_name">Song Name: </label>
  <input type="text" name="Name" id="song_name" value="<%= @song.name %>">
  <br></br>

  <label for="artist_name">Artist Name: </label>
  <input type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name %>">

  <label>Choose existing genres:</label></br>
  <% Genre.all.each do |genre| %>
    <p><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"
      <%= 'checked' if @song.genre_ids.include?(genre.id) %>><%= genre.name %></p>
  <% end %>
  <br></br>

  <input type="submit" value="Save">
</form>

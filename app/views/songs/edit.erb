<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Update Artist Name</label>
  <br /><br />

  <input type="text" name="Artist Name">
  <br /><br />

  <% Genre.all.each do |genre|%>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %><br />
  <%end%>
  
  <br /><br />
  <input type="submit" value="Save">
</form>

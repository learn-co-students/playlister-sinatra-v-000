<h1>Updating a song:</h1>

<form action="/songs/<%= @song.slug %>" method="post">
    <input type="hidden" name="_method" value="patch"> 
    <label>Artist Name</label>
    <input type="text" id="Artist Name" name="Artist Name" value="<%=@song.artist.name%>"><br><br>

    <label>Song Name:</label>
    <input type="text" name="song[name]" id="name" value="<%=@song.name%>"><br><br>
    <label>Genres:</label>
    <% Genre.all.each do |genre| %>   
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre)%>><%=genre.name%></input> 
    <% end %>
    <br><br>
    <input type="submit" value="Save">
    
</form>
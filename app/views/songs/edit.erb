
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>


<h2> Update a Song: <h2>

<form action="/songs/<%= @song.slug %>" method="post" >
  <h4><label>Name: </label></h4>
    <input type="text" name="song[name]" value="<%= @song.name %>" id="Song Name"></input>


  <h4><label>Artist Name:</label></h4>
    <input type="text" value="<%= @song.artist.name %>" name="song[artist]" id="Artist Name"></input>



<h4>Song Genre: </h4>

    <h5><% Genre.all.each do |genre| %>

    <input value="<%= genre.id %>" id="<%= genre.name %>" name="song[genre]" type="checkbox" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>

    <% end %><h5>




  <input type="submit" value="Update Song" id="Save"></input>


</form>




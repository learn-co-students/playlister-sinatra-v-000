<h1><%= @song.name %></h1>

<h3>By:<a href=<%= "/artists/#{@song.artist.slug}"%>> <%= @song.artist.name %></h3></a>

<h4>Genres: </h4>

<% @genres.each do |genre| %>
  <a href=<%= "/genres/#{genre.slug}"%>><%= genre.name %></a>
<% end %>

<form action=<%= "/songs/#{@song.slug}/edit" %> method="post">
  <label for="song_name">Song Name: <input id="Name" type="text" name="[song][name]" value=""></label><br>
  <label for="artist_name">
    <h3>Choose an Artist:</h3>
    <% Artist.all.each do |artist| %>
      <label for=<%="#{artist.name}" %>><%="#{artist.name}" %></label><input id=<%="#{artist.id}" %>  type="checkbox" name="[artist][name]"><br>
    <% end %>
    <h3>Or Create a new Artist: </h3>
    <input id="Artist Name" type="text" name="[new_artist][name]" value="">
  </label><br>

  <h3>Choose a Genre:</h3>
  <label for="Genre">
    <% Genre.all.each do |genre| %>
      <input type="checkbox" name="[genre][name]" id="<%= genre.name%>" value="<%=genre.name%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
    <% end %>
  </label>

  <input type="submit" name="submit" value="Save">
</form>

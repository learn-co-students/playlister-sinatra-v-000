<br><br>
<form action="/songs/<%= @song.slug %>" method="post">
	<label for="Name">Name</label>
	<input type="text" name="name" id="Name" value="<%= @song.name %>">
	
	<br><br>
	<% Genre.all.each do |genre| %>
	<input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %>
	<% end %>
	
	<br><br>
	<label for="Artist Name">Artist Name</label>
	<input type="text" name="artist" id="Artist Name" value="<%= @song.artist.name %>">
	
	<br><br>
	<input type="submit" value="Save">
</form>
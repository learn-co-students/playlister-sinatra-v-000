<form method="post" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  Name:
  <input type="text" name="song_name" placeholder="<%= @song.name %>">

  <br>
  <br>

  Artist Name:
  <input type="text" name="artist_name" placeholder="<%= @song.artist.name %>">

  <br>
  <br>

  Genres:
  <% @available_genres.each do |genre| %>
    <input type="checkbox" name="genre_ids[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre)%>>

    <%= genre.name %>

    <br>
  <% end %>

  <br>
  <br>

  <input type="submit" value="Save">

</form>

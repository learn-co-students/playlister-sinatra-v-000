<h2>Edit a Song</h2>

<form action="/songs/<%=@song.slug%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">

  <br></br>

  <label>Choose existing artist, or create a new artist:</label>

  <br></br>

  <label>Artist name:</label>

  <br></br>

    <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"></input>

  <br></br>

  <label>Choose existing genre:</label>

  <br></br>

  <%@genres.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%></input>
  <%end%>

  <br></br>

  <label>Or, create a new genre:</label>
  <br></br>

  <label>Genre name:</label>
    <input type="text" name="genre_new[name]" id="genre_name"></input>

  <br></br>

  <input type="submit" value="Save">
</form>

<!DOCTYPE html>
<html>
  <head> Edit Song Form</head>
  <body>
    <h1>Update Song: <%= @song.name %></h1>

    <form action="/songs/<%= @song.slug %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
        <br>

        <br>
          <label for="Artist Name">Artist Name</label>
          <input type="text" name="artist" value=" <%= @song.artist.name %>" id="Artist Name">
        <br>
          <% Genre.all.each do |genre| %>
          <label for="<%= genre.name %>"><%= genre.name %></label>
          <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genre_ids.include?(genre.id) %>>
          <% end %>
        <br>

        <input type="submit" value="Save">

    </form>
  </body>
</html>

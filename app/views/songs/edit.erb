<form method="POST" action="/songs/<%=@song.slug%>">
  <label> Song Name: </label>
  <input type='text' name='Name'>

  <label> Artist Name: </label>
  <input type='text' name="Artist Name">

  <label> Genres: </label>
  <% Genre.all.each do |genre| %>
      <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%="checked" if @song.genres.map {|x| x.name}.include?(genre.name) %>><%=genre.name%></input>
  <% end %>
  <input type="hidden" name="_method" value="PATCH">
  <input type="submit" id="Save">
</form>

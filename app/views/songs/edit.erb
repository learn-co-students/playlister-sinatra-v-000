<p>Successfully updated song.</p>


<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name</label>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>">
 

  <label for="Artist Name">Artist Name</label>

  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name">

  <% Genre.all.each do |genre| %>
    <label><%= genre.name %></label>
    
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>></input>
  <% end %>

  <input type="submit" value="Save">
</form>
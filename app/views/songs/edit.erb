<h1> Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="post">

  Song Name: <input type="text" name=song[name] id="Name" value = "<%=@song.name%>"> </input>
  <br>
  <% Genre.all.each do |genre| %>
      Genres: <input type="checkbox" name="song[genre_ids][]"  value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre)%> <%=genre.name%> </input>\
  <% end %>

  Artist Name<input type="text" name="song[artist]" id="Artist Name"> </input>


  <br>
  <input type="submit" id="Save" name ="Save">
</form>
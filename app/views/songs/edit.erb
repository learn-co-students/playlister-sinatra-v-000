<h1>Edit Song <br><%= @song.name %>
</h1>
<form action="/songs/<%= @song.slug %>" method="POST" >
<input type="hidden" name="_method" value="PATCH">

<label for="name">Song Name</label>
<input type="text" name="song[name]" id="name" value="<%= @song.name %>">

<label for="artist_name">Artist Name</label>
<input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name%>">

<% Genre.all.each do |genre| %>
<label><%= genre.name.capitalize %></label>
<input type="checkbox" name="song[genre_ids] []" id="<%=genre.name %>" value="<%= genre.id %>" <%'checked' if @song.genres.include?(genre)%>>
<% end %>

<input type="submit" value="Save">
</form>

<h1>Edit a Song!</h1>
<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="song_name">Name</label>
  <input id="song_name" type="text" name="song[name]" value="<%=@song.name%>"><br><br>

  <label>Choose a genre for your song:</label>
  <%Genre.all.each do |genre|%>
    <input id="<%=genre.name%>" type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <% end %><br><br>

  <label for="artist_name">Artist Name:</label>
  <input id="artist_name" type="text" name="artist[name]" value="<%=@song.artist.name%>"><br><br>

  <input type="submit" value="Save">
</form>

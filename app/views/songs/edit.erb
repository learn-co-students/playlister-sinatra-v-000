<h1>Edit <%= @song.name %></h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Song Name:</label>

  <br></br>

  <input type="text" name="Name" id="Name" value="<%= @song.name %>">

  <br></br>

  <label>Artist Name:</label>

  <br></br>

  <input type="text" name="Artist Name" id="Artist Name" value="<%= @song.artist.name %>">

  <br></br>

  <label>Choose Genre:</label>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"<%='checked' if @song.genres.include?(genre) %>><%= genre.name %>
  <% end %>

  <br></br>

  <input type="submit" value="Save">
</form>

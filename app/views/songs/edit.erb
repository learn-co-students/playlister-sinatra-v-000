<h1>Edit <%=@song.name%></h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label> Song Name </label>
  <input type="text" name="song[name]" value= "<%=@song.name%>"><br></br>

  <label> Artist Name </label>
  <input type="text" name="Artist Name" value= "<%=@song.artist.name%>"> <br></br>



  <label> Genres </label><br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <% end %>
<br></br>
  <input type="submit" value="Save">
</form>

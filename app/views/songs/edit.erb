<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">

  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="song_name" value="<%=@song.name%>">

  <br></br>

  <label>Artist Name</label>
    <input  type="text" name="artist[name]" id="Artist Name" value= "<%=@song.artist.name%>"></input>
  <br></br>

  <label> Genres: </label>
	<%Genre.all.each do |genre|%>
    	<label><%=genre.name%></label>
    	<input type="checkbox" name="song[genre_ids][]" value="<%=genre.id %>" id="<%=genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  	<%end%>

    <% if flash.has?(:message) %>
      <%= flash[:message] %>
    <% end %>

  <input type="submit" value="Save">
</form>

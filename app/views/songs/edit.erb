<h1>Update a Song</h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>">

  <br></br>

  <label>Artist:</label>

  <br></br>

  <input type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name %>">

   <br></br>

  <label>Select Genre(s):</label>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
    <%= genre.name %></input>
  <% end %>
  <br></br>

  <input type="submit" name="submit" value="Save">
</form>

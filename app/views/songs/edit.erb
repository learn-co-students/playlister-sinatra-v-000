<h1>Edit Song</h1>
<h2><%= @song.name %></h2>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p>Update Artist: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name%>"></p>
  <p>Update Genre:
  <% Genre.all.each do |genre| %>
      <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre)%>>
        <%= genre.name %>
      </input>
    <%end%></p>
    <input type="submit" value="Save" id="Save">
  </form>

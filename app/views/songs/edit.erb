<p>Edit <%= @song.name %></p>



<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <p>Name<input type="text" name="song[name]" id="name" value="<%= @song.name %>"></p>

  <p>Artist Name<input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name"></p>

  <% Genre.all.each do |genre| %>
    <p><%= genre.name %></p>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>

  <input type="submit" value="Save">
</form>


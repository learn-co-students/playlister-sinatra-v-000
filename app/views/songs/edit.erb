<h1><%=@song.name %> Edit Page</h1>

<form method="post" action="/songs/<%=@song.slug%>">
	<input type="hidden" id="hidden" name="_method" value="patch">
	
	<label>Song Name:</label>
	<input type="text" name="Song Name">

	<br>
	<br>

	<label>Artist Name</label>
	<input type="text" name="Artist Name">

	<br>
	<br>
	<% @genres.each do |genre|%>
	<input type="checkbox" id="<%=genre.name%>" name="genre_id[]" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>> <%=genre.name%></input>
	<%end%>


	<br>
	<br>

	<input type="submit" name="save" id="save" value="Save">



</form>
<h1>Edit Song</h1>
<form class="row form-horizontal" action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <p><label>Song Name</label>
  <input type="text" name="Name" id="song_name" value="<%= @song.name %>"></p>

  <p><label>Artist Name</label>
  <input type="text" name="Artist Name" id="artist_name" value="<%= @song.artist.name %>"></p>

  <p><label>Genres</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %></p>
  <p><input class="btn btn-default" role="button" type="submit" id="submit" name="submit" value="Save"></p>
</form>

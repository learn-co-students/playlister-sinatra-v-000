<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Song: <%=@song.name%></p>
  <p>Artist: <input type="text" name="artist_name" id="Artist Name" value="<%=@song.artist.name%>"></p>
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genre_ids.include?(genre.id) %>>
  <% end %>
  <input type="submit" value="submit" id="Save">
</form>

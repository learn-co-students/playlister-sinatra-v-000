<h1>Update Song: <%=@song.name%></h1>

<form method="POST" action="/songs/<%=@song.slug%>">
  <input type="hidden" id="hidden" name="_method"value="PATCH">

  <label>Song Name:</label>
  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">
  <br></br>

  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>"> <%=genre.name%> </input>
  <% end %>
  <br></br>
  
  <label>Artist Name:</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"></input>
  <br></br>

  <button type="submit" value="Save">Save</button>

</form>

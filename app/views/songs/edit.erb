
<h1> Edit the Song</h1>

<form action='/songs/<%= @song.slug%>' method="POST">
  <input type="hidden" name="_method" value="patch">

  <label>Name</label>
  <br></br>
  <input type="text" name="Name" id="song_name" value="<%=@song.name%>">


  <%Genre.all.each do |genre|%>
  <%=genre.name%>
  <input id="<%=genre.name%>" type="checkbox" name="genres[]" <%="checked" if @song.genres.include?(genre)%> value="<%=genre.id%>">

  <%end%>

  <br></br>
  <label>Artist Name</label>
  <br></br>
  <input type="text" name="Artist Name" id="artist_name" value="<%=@song.artist.name%>">

  <br></br>

  <input type="submit" value="Save">

</form>

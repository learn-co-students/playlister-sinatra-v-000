<h1>Edit Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">

  Name:<input type="text" name="Name" id="song_name" value="<%=@song.name%>"></input>

  <br></br>

  <label>Choose a genre:</label>
  <br></br>
  <%Genre.all.each do |g|%>
      <input id="<%= g.name %>" type="checkbox" name="genres[]" value="<%= g.id%>" <%='checked' if @song.genres.include?(g)%>><%=g.name%></input>
  <%end%>

  <br></br>

  Artist Name:<input type="text" name="Artist Name" id="artist_name" value="<%=@song.artist.name%>">Artist Name</input>

  <br></br>

  <input type="submit" value="Save">
</form>

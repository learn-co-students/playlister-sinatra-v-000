<h1>Edit Song <%=@song.name%></h1>

<form class="" action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="song_name">Song Name</label><br>
  <input type="text" name="Name" id="<%=@song.name%>" value="<%=@song.name%>">
  <br><br>

  <label for="artist_name">Artist Name</label><br>
  <input type="text" name="Artist Name" id="artist_name" value="<%=@song.artist.name%>"><br></br>

  <label>Select Genres</label>
  <br></br>

  <%Genre.all.each do |genre|%>
    <input id="<%=genre.name%>" type="checkbox" name="genres[]" value="<%=genre.id%>"<%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <% end %>

  <br></br>
  <input type="submit" value="Save">
</form>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<h3>Update your Song, Artist, and Genre</h3>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" name="Song Name" value="<%=@song.name%>">
  <input type="text" name="Artist Name" value="<%=@song.artist.name%>">

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="Genres" value="<%= genre.id %>"><%='checked' if @song.genres.include?(genre) %><%=genre.name%></input>
  <% end %>

  <input type="submit" value="Save">
</form>

<h1>Edit</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="Name">

  <br></br>

  <label>Choose an existing artist:</label>

  <br></br>

  <%Artist.all.each do |artist|%>
    <input type="checkbox" name="song[artist_id][]" id="<%=artist.name%>" value="<%=artist.id%>" <%="checked" if @song.artist == artist %>><%=artist.name%></input>
  <%end%>

  <br></br>

    <label>or, create a new artist:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="artist[name]" id="Artist Name"></input>
    <br></br>

  <label>Choose existing genres:</label>

  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>
  <%end%>

  <br></br>

    <label>and/or, create a new genre:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="genre[name]" id="Genre Name"></input>
    <br></br>
  <input type="submit" value="Save">
</form>
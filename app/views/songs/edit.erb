<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

    <h2><label>Name <input type="text" name="song[name]" id="name" value="<%= @song.name %>"></label></h2>

    <h2><label>Artist Name <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name"></label></h2>

    <h2><label> Genres </label></h2>
      <p><% Genre.all.each do |genre| %>
        <label><%= genre.name %></label>
        <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %> ></input>
        <% end %>
      </p>
    <input type="submit" value="Save">
</form>

<h2><%=@song.name%></h2>
<h3>Edit Your Song's Info:</h3>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label>Artist Name:</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"></input>
  <br>
  <br>
  <label>Genre Name(s):</label>
  <br>
    <%Genre.all.each do |genre|%>
      <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"<%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
      <br>
    <%end%>
  <input id="submit" type="submit" value="Save">
</form>
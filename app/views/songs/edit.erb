<h1>Edit "<%=@song.name%>"</h1>

<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" id="hidden" value="patch"> <br></br>
  <label>Artist Name:</label> <input type="text" name="song[artist]" id="Artist Name" value="<%=@song.artist.name%>"> <br></br>
  <label>Song Name:</label> <input type="text" name="song[name]" id="Name" value="<%=@song.name%>"> <br></br>

  <label>Genres:</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre)%>>
    <%= genre.name%></input>
  <% end %>

  <br></br>

  <input type="submit" value="Save">

</form>

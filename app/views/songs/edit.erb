<<h1>Edit a Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">


  <label for="name"> Name </label>
  <input type="text" name="song[name]" id="name" value= "<%= @song.name %>">

  <label for="artist_name"> Artist Name </label>
  <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>">


  <% Genre.all.each do |genre| %>
  <label> <%= genre.name %> </label>
  <input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>"> <%= 'checked' if @song.genres.include?(genre) %></input>
  <% end %>

  <input type="submit" value="Save">

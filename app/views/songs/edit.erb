<h1>Edit Song</h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @song.name %>" id="Name">
  <br></br>

  <label>Genre:</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>"
    value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>
  <br></br>

  <label>Artist:</label>
  <input type="text" name="artist" value="<%= @song.artist.name %>" id="Artist Name">
  <br></br>

  <input type="submit" value="Save">
</form>

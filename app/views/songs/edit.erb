<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="song[name]" id="song_name" value="<%=@song.name%>">
  
  <br></br>
  <label>Update Artist:</label>
    <br>
    <label>Artist Name:</label>
      <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"></input>
    <br>

  </br>
  <label>Update Genres:</label>
  
  <br></br>
  
  <%@genres.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <%end%>
  
  <br></br>
  <input type="submit" value="Save">
  </form>
<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  Name: <input type="text" name="song[name]" id="Name" value="<%= @song.name %>">
  Artist: <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>">
  Genres:
  <% Genre.all.each do |genre| %>
    <%= genre.name %> <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>
  <input type="submit" value="Save">
</form>

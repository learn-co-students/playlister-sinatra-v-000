<form action="/songs/<%= @song.id %>" method="POST">
  <!--<input type="hidden" id="hidden" name="_method" value="patch">-->

  <label for="Name">Name:</label>
  <br><br>
  <input type="text" name="song[name]" value="<%= @song.name %>" id="Name">
  
  <br><br>

  <label>Genre(s):</label>
  <br><br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>
<br><br>

  <label>Artist:</label>
<br><br>
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name">

  <input type="submit" value="Update Song" id="Save">


</form>
<h1> Update Song </h1>

<form action="songs/<%=@song.slug%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <br></br>
  <input type="text" name="song[name]" value="<%=@song.name%>" id="Name">
  <br></br>
  <label>Genres:</label>
  <br></br>
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>">
  <%end%>
  <br></br>
  <label>Artist Name:</label>
  <br></br>
  <input type="text" name="artist[name]" value='<%=@song.artist.name%>' id="Artist Name">
  <br></br>
  <input type="submit" value="Save">
</form>

<h1>Update a Song</h1>
<form action="/songs/<%=@song.slug%>" method="post">
  <label>Song Name:</label>
  <br></br>
  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">
  <br></br>
  <label>Artist Name:</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>">
  <br></br>
  <label>Choose from an existing Genre:</label>
  <br></br>
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <%end%>
  <br></br>
  <input type="submit" value="Save">
</form>

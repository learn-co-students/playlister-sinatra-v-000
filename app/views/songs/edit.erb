<h1>Edit a Song:</h1>

<br>

<form method="POST" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input type="text" name="Name" value="<%= @song.name %>"><br></br>
  <label>Artist: </label>
  <input type="text" name="Artist Name" value="<%= @song.artist.name %>"><br></br>

  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"<%= 'checked' if @song.genres.include?(genre) %>><%= genre.name%></input>
    <% end %><br></br>
    <input type="submit" value="Save">
</form>

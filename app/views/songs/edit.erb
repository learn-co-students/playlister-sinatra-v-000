<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>Edit Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  Song Name: <input type="text" name="Name" value="<%= @song.name %>"> </br>
  Artist Name: <input type="text" name="Artist Name" value="<%= @song.artist.name %>"> </br>
  <label> Genres: </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>
  <input type="submit" value="Save">
</form>
<h1>Edit Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <label>Name: </label>

  <br>

  <input type="text" name="song[name]" id="Name" value="<%=@song.name%>">

  <br><br>

  <label>Choose an existing artist: </label>
  <br>

  <%Artist.all.each do |artist|%>
  <input type="checkbox" name="song[artist_id]" value="<%=artist.id%>" id="<%=artist.name%>"<%='checked' if @song.artist == artist %>><%=artist.name%></input><br>
  <%end%>

  <br><br>

  <label>or, create a new artst:</label><br>
  <label>Artist name:</label>
    <input  type="text" name="artist[name]" id="Artist Name"></input>
  <br></br>

  <label>Choose an existing genre: </label>
  <br>

  <%Genre.all.each do |genre|%>
  <input type="checkbox" name="song[genre_ids]" value="<%=genre.id%>" id="<%=genre.name%>"<%='checked' if @song.genres.include?(genre)%>><%=genre.name%>
  </input><br>
  <%end%>

  <br><br>

  <label>and/or, create a new genre:</label><br>
  <label>Genre name:</label>
    <input  type="text" name="genre[name]" id="Genre Name"></input>
  <br></br>
  <input type="submit" value="Save">

</form>
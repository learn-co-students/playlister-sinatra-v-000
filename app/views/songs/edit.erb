<h1>Edit the Song <%= @song.name %></h1>

<form method="post" action="/songs/<%= @song.slug %>">
  <label for="name">Name: </label>
  <input type="text" name="Name" value="<%= @song.name %>">

  <br></br>
  <br></br>

  <label>Artist: </label>
  <% Artist.all.each do |artist| %>
  <input type="radio" name="Artist" value="<%= artist.id %>"<%= 'checked' if @song.artist.id %>><%= artist.name %></input>
  <%end%>

  <label>Create New Artist: </label>
  <input type="text" name="Artist Name">

  <br></br>
  <br></br>

  <label>Genres</label>
  <% Genre.all.each do |genre| %>
  <input type="checkbox" name="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <input type="submit" value="Save">
</form>

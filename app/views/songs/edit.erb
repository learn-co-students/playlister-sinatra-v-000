<h1>Edit <%=@song.name%></h1>

<form action='/songs/<%=@song.slug%>' method='post'>
<label>Name</label>
<input type="text" id="Name" name="song[name]" value="<%=@song.name%>"><br>
<label>Artist Name</label>
<input type="text" id="Artist Name" name="song[artist]" value="<%=@song.artist.name%>"><br>
<label>Genre:</label>
  <% Genre.all.each do |genre| %>
  <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%>
  <% end %>

<input type="submit" value="Submit" id="Save">
</form> 
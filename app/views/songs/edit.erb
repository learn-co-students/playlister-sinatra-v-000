<h1>Edit the Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
<input type="hidden" name="_method" value="PATCH">

<label>Name</label>
	<br></br>
<input type="text" name="song[name]" id="name" value="<%= @song.name %>" placeholder="Song Name">
<br></br>

<label for="artist_name">Artist Name</label>
<br></br>
<input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>"/>

<br></br>

<h2>Genres</h2>

<%Genre.all.each do |genre| %>
	<li><label><%= genre.name %></label>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>></li>
<% end %>

<br></br>

<input type="submit" value="Save">
</form>

<form method="POST" action="/songs/<%=@song.slug%>">
  <input type="hidden" name="_method" value="patch">
  <input type="text" value="<%= @song.name %>" name="song_name">
  <input type="text" value="<%= @song.artist.name %>" name="Artist Name">
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></br>
  <% end %>
  <input type="submit" value="Save" name="submit" id="submit">
</form>

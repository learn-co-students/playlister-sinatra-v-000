<h1>Edit <strong style="color: red"><%=@song.name%></strong></h1>
<form method="POST" action="/songs/<%=@song.slug%>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p><strong style="color: red">Song</strong> Name: <input type="text" name="song[name]"  id="<%=@song.name%>"></p>
  <p><strong style="color: blue">Artist</strong> Name: <input type="text" name="song[artist]" id="Artist Name"></p>
  <% Genre.all.each do |genre| %>
    <li><input type="checkbox" id="<%= genre.name %>" name="song[genre_ids][]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></li>
  <% end %>
  <input type="submit" value="Save">
</form>

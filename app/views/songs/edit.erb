<h1>Edit Song</h1>
<h2><%=@song.name%></h2>

<form method = "post" id = "edit_song" action = "/songs/<%=@song.slug%>">
  <label for ="Artist">Artist</label><input type ="text" name ="Artist Name">
  <h2>Genres</h2>
  <ul>
    <%Genre.all.each do |genre| %>
      <li><%=genre.name%><input id="<%=genre.name%>" type ="checkbox" name ="genre[]" value ="<%=genre.name%>"></li>
    <%end%>
  </ul>
  <button type ="submit">Save</button>
</form>
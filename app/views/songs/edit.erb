<h1>Edit: <%=@song.name%></h1>
<form action="/songs/<%=@song.slug%>"method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name:</label><br></br>
  <input type="text" name="song[name]" id ="name" value="<%=@song.name%>">
  <br></br>
  <label for="artist_name">Artist:</label><br></br>
  <input type="text" name="artist[name]" id ="artist_name" value="<%=@song.artist.name%>">
  <br></br>
  <%Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%="checked" if @song.genres.include?(genre)%>><%=genre.name%></input>

  <br></br>
  <%end%>
</form>

<h1>Edit this song</h1>

<form action="/songs/<%= @song.slug%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">

<label for="name">Song Name:<input type="text" name="Song Name" id="song_name" value="<%=@song.name%>"></label>
<label for="artist_name">Artist:<input type="text" name="Artist Name" value="<%= @song.artist.name%>"></label>
<br></br>
<label>Genres:</label>
<%Genre.all.each do |genre|%>
    <%= genre.name%><input type="checkbox" name="genres[]" value="<%= genre.id%>" id="<%= genre.name%>" <%='checked' if @song.genres.include?(genre) %>>
 <%end%>

 <br></br>
 <input type="submit" value="Save">

</form>

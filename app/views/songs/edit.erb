<h2>Edit a Song</h2>

<form method="POST" action="/songs/<%= @song.slug %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="song_name">Song Name:</label>
  <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">
  <br><br>
  <label for="artist_name">ArtistName:</label>
  <input type="text" id="Artist Name" name="song[artist][name]" value="<%= @song.artist.name %>">
  <br><br>
  <% Genre.all.each do|genre| %>
    <input type="checkbox" name="song[genres][][name]" id="<%= genre.name %>" value="<%= genre.name %>" <%='checked' if @song.genres.first.name == genre.name%>><%=genre.name %></input>
  <% end %>
  <br><br>
  <input type="submit" value="Save">
 
</form>
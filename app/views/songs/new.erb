<h1>Create your song here:</h1>

<form method="post" action="/songs">

<label for="song[name]">Song name:</label>
<input type="text" name="song[name]" id="Name">


<label for="song[artist]">Artist Name</label>
<input type="text" name="song[artist]" id="Artist_Name">

<p>Select all applicable genres</p>
<%Genre.all.each{|genre|%>

                      <input id="<%=genre.name%>" type="checkbox" name="song[genres][][name]" value="<%=genre.name%>"><%=genre.name%></input><br>
            <%}%>

<input type="submit" name="Create" id="Create" value="Create">
</form>
<h1>Add a New Song</h1>

<form action="/songs" method="POST">

  <h3> <label> Song Name </label> </h3>
  <input type="text" name="song[name]" id="Name"> </br>

  <h3> <label> Artist Name </label> </h3>
  <% Artist.all.each do |artist| %>
    <p><input id="<%=artist.name %>" type="checkbox" name="artist[id][]" value="<%= artist.id %>"> <%= artist.name %> </p>
  <% end %>

  <h3> or create a new  artist </h3>
  <input type="text" name="artist[name]" id ="Artist Name"> </br>

  <h3><label> Genres </label></h3>
  <% Genre.all.each do |genre| %>
    <p><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <%= genre.name %> </p>
  <% end %>

  <input type="submit" value="Create">
</form>

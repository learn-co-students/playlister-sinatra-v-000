<h1>Create a New Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="song[name]" id="Name">
  
  <br></br>

  <label>Choose a Genre:</label>
  <br></br>

    <%Genre.all.each do |genre|%>
      <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%></input>
      <br>
    <%end%>

  <br></br>

  <label>Input Artist:</label>
    <br></br>
    <label>Name:</label>
      <input  type="text" name="artist[name]" id="Artist Name"></input>
    <br></br>
  
  <input type="submit" value="Create">
</form>
<h1>Create a New Song</h1>

<form action="/songs/new" method="post">
  <label for="song[name]">Name: </label>
  <input type="text" name="song[name]" id="Name">
  <br><br>
  <label for="song[genre_ids][]">Genre: </label>
    <%Genre.all.each do |genre|%>
      <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>"><%= genre.name %></input>
    <% end %>
  <br><br>
  <label for="artist[name]">Artist Name: </label>
  <input type="text" name="artist[name]" id="Artist Name">
  <input type="submit" value="Create">
</form>

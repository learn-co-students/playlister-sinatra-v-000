<h1>make a new song</h1>

<form action="/songs" method="POST">
  <label>Song Name:</label>

  <input type="text" name="song[name]" id="song_name">

  <br></br>

  <label for="">Artist Name:</label>
  <input type="text" name="song[artist]" id="song_artist" value="">
  <br></br>
  <label>Choose an existing genre:</label>

  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.id%>"><%=genre.name%></input>
  <%end%>

  <br></br>
  <label>and/or, create a new genre:</label>
  <br></br>
  <label>name:</label>
    <input type="text" name="genre[name]"></input>
  <br></br>
  <input type="submit" value="Create song">
</form>

<h1>Add New Song</h1>

<form action="/songs" method="POST">
  <label> Artist Name: </label>
  <input type="text" name="song[artist]" id="Artist Name" />
<br /><br />
  <label> Song Name: </label>
  <input type="text" name="song[name]" id="Name">
<br /><br />
  <label> Genres: </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>"><%= genre.name%>
  <% end %>
<br /><br />
  <input type="submit" value="Create" />
</form>

<html>
  <head>
    <meta charset="UTF-8">
    <title>New Song</title>
  </head>
  <body>
    <h2>Create a New Song</h2>
    <form action="/songs/new" method="post">
      <label>Song Name:</label>
      <input type="text" id="song_name" name="Name">

      <br /><br />

      <label>Artist Name:</label>
      <input type="text" id="artist_name" name="Artist Name">

      <br /><br />

      <% Genre.all.each do |genre| %>
        <input type="checkbox" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
      <% end %>

      <br /><br />

      <input type="submit" id="submit" name="submit" value="Create Song">
  </body>
</html>

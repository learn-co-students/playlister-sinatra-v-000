<h1>Add a new song!</h1>
<form action="/songs" method="post">
  <label>Song name:</label><br>
  <input type="text" name="song[name]" id="song_name">
  <br><br>

  <label>Select an artist:</label><br>
  <br>
  <% Artist.all.each do |artist| %>
    <input type="radio" name="song[artist_id]" value="<%= artist.id %>">
      <%= artist.name %>
    </input>
  <br>
  <% end %>

  <label>or create a new one:</label><br>
  <input type="text" name="song[artist][name]">
  <br><br>

  <label>Select a genre:</label><br>
  <br>
  <% Genre.all.each do |genre| %>
    <input type="radio" name="song[genre_id]" value="<%= genre.id %>">
      <%= genre.name %>
    </input>
  <br>
  <% end %>

  <label>or create a new one:</label><br>
  <input type="text" name="song[genre][name]">
  <br><br>

  <input type="submit" value="Create Song">
</form>

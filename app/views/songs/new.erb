<h1>Create a Song!</h1>
<form action="/songs" method="post">
  <label for="song_name">Name</label>
  <input id="song_name" type="text" name="song[name]"><br><br>

  <label>Choose a genre for your new song:</label>
  <%Genre.all.each do |genre|%>
    <input id="<%=genre.name%>" type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>"><%=genre.name%></input>
  <% end %><br><br>

  <label for="artist_name">Artist Name:</label>
  <input id="artist_name" type="text" name="artist[name]"><br><br>

  <input type="submit" value="Create">
</form>

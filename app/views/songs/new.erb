<h1>Create a New Song</h1>

<form action="/songs" method="post">
    <p>Name: </p><input type="text" name="Name" id="song_name"><br />
    
    <%Genre.all.each do |genre|%>
        <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name %>"><%=genre.name%></input>
    <%end%>
    <br />
      
    <p>Artist: </p><input type="text" name="Artist Name">  
    <input type="submit" value="Create Song">
</form>
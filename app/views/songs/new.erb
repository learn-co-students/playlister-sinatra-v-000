<h2> Create a New Song! </h2>

<form action="/songs" method="post">
  <label> Song </label>
  <input type="text" name="Name">

  <br></br>

  <label> Artist </label>
  <input type="text" name="Artist Name">

  <br></br>

  <label> Genre </label>
  <br><% Genre.all.each do |genre| %>
   <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %></input></br>

<% end %>

  <br></br>

  <input type="submit" value="Create">
</form>

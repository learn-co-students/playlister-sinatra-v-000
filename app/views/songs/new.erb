<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Title:</label>
  <br />
  <input type="text" id="Name" name="song[name]">

  <br></br>
  <label>Artist:</label>
  <br />
  <input type="text" id="Artist Name" name="artist[name]">

  <br></br>
  <br />
  <label>Genre:</label>
  <br />
  <%Genre.all.each do |genre|%>
      <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"><%= genre.name %></input><br />
  <%end%>

  <br />

  <!-- <label>and/or, create a new pet:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="pet[name]"></input>
  <br></br> -->

  <input type="submit" id="Create" value="Create Song">

<h1>Create a New Song</h1>

<form action="/songs" method="post">
  <p>Name: <input type="text" name="song[name]" id="Name"></p>

  <p>Choose an existing genre:</p>

  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %></input>
  <% end %>

  <p>Artist Name: <input type="text" name="artist[name]" id="Artist Name"></p>

  <input type="submit" value="Create">
</form>

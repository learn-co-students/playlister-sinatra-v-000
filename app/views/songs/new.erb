<h1>Create a New Song</h1>

<form method="post" action="/songs">
    <label for="song_name">Name:</label>
    <input type="text" name="song[name]" id="song_name"><br>
    <label for="Artist Name">Artist:</label>
    <input type="text" name="artist[name]" id="Artist Name">
    <p>Genres:</p>
    <% Genre.all.each do |genre| %>
    <label for="<%= genre.name %>"><%= genre.name %></label>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><br>
    <% end %>
    <input type="submit" value="Create">
</form>
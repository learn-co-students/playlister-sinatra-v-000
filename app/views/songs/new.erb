<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="song[name]" id="Name">

  <br>

  <label>Choose an existing genre:</label>

  <br>

  <%@genres.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>">
    <%=genre.name%></input>
  <%end%>

  <br>


  <label>Choose an existing artist:</label>

  <br>

  <%@artists.each do |artist|%>
    <input type="checkbox" name="song[artist_id]" value="<%=artist.id%>" id="<%=artist.name%>">
    <%=artist.name%></input>
<%end%>

<br>

    <label>and/or, create a new artist:</label>
    <br>
    <label>Name:</label>
      <input  type="text" name="artist[name]" id="Artist Name"></input>
    <br>

  <input type="submit" value="Create Song">
</form>

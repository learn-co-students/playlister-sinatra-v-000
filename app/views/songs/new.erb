
<h1>Create a new song!</h1>

<form action="/songs" method="post">
  <p>Song Name: </p><input type = "text" name="song[name]" id="Name"><br>
  <p>Artist Name: </p><input type= "text" name="artist[name]" id="Artist Name"><br>

  <br></br>
  <label>Choose an existing genre:</label>
  <br></br>

  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <br></br>

  <input type="submit" value= "Create" id="Create">

</form>

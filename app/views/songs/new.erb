<h1>Create a new song</h1>

<form method="POST" action="/songs">
  <label for="name">Song Name:</label>
    <input type="text" id="Name" name="song[name]"/>
  <br></br>

  <label for="artist_name">Artist Name:</label>
    <input type="text" id="Artist Name" name="song[artist][name]"/>
  <br></br>

  <label for="genre">Genre (Choose all that apply):</label>
    <% Genre.all.each do |genre| %>
      <input type="checkbox" id="<%= genre.name %>" name="song[genre_ids][]" value="<%= genre.id %>">
        <%= genre.name %>
      </input>
    <% end %>
  <br></br>

  <input type="submit" value="Create"/>
</form>

<h1>Create a new song:</h1>
<form action="/songs" method="post">

  <label>Name:</label>
  <input type="text" id="Name" name="song[name]" value="song_name">
  <br></br>

  <label>Genre(s):</label>
     <% @genres.each do |genre|%>
       <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%></input>
     <% end %>

   <br></br>

 <label>Artist name:</label>
     <input type="text" name="artist_name" id="Artist Name"></input>
   <br></br>

   <input type="submit" id="Create" value="Create">

</form>

<form method="POST" action="/songs">

  <label for="name">Name: </label>
  <input type="text" name="song[name]" id="song_name" /><br /><br />

  <label>Genre: </label><br />
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genres[]" id="genre_<%= genre.id %>_name" value="<%= genre.id %>"/>
    <label for="genre_<%= genre.id %>_name"><%= genre.name.split(" ").map(&:capitalize).join(" ") %></label><br />
  <% end %><br />

  <label for="artist_name">Artist Name: </label>
  <input type="text" name="artist[name]" id="artist_name" /><br /><br />

  <input type="submit" name="submit" id="submit" value="Create" />

</form>

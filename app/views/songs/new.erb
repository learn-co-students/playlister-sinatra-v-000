<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Song Name:</label>
  <input type="text" name="Name" value="Song Name" id="song[name]"><br>

  <label>Artist Name:</label>
  <input type="text" name="Artist Name" value="Artist Name" id="artist[name]"><br>

  <label>Genre:</label><br>
  <% Genre.all.each do |genre| %>
  <input type="checkbox" id="<%= genre.name %>" value="<%= genre.id %>" name="genres[]"><%= genre.name %>     </input>
  <% end%>

  <br><br>

  <input type="submit" value="Create">
</form>

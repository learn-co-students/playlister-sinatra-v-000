<h1>Create A New Song</h1>
<form method="POST" action="/songs">
    <p><label for="Name">Song Name: </label><input id="Name" type="text" name="song[name]"></p>

    <p><label for="Artist Name">Artist Name: </label><input id="Artist Name" type="text" name="artist[name]"></p>

    <p>Choose an existing genre:</p>
    <% @genres.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"><label for="genre_name"><%= genre.name %> </label>
    <% end %>
    <br></br>
    <input type="submit" value="Create">
</form>


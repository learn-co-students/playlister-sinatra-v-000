<h1>Create a New Song</h1>

<form action="/songs" method="POST">
  <label for="song_name">Name:</label>

  <input type="text" name="Name" id="song_name">

  <br></br>

  <label>Choose an existing genre:</label>

  <br></br>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <br></br>

  <label>Enter the name of a new artist or an existing artist:</label>

  <br></br>

  <label for="artist_name">Artist Name:</label>

  <input type="text" name="Artist Name" id="artist_name">

  <br></br>

  <input type="submit" value="Create">
</form>

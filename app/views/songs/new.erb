<h1>Create A New Song</h1>

<form action="/songs" method="POST">

    <label>Name:</label>
    <input type="text" name="song[name]" id="Name"><br>
    <br>
    <label>Artist:</label>
    <input type="text" name="song[artist]" is="Artist Name"><br>
    <br>
    <label>Genres:</label>
    <% @genres.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>"><%= genre.name %><br>
    <% end %>
    <br>
    <br>
    <input type="submit" value="Create">

</form>
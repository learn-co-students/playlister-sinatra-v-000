<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Song Name:</label>
  <input type="text" name="Name" id="song_name"><br><br>

  <label>Artist Name:</label>
  <input type="text" name="Artist Name" id="artist_name"><br><br>

  <label>Choose an existing genre:</label><br>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>
  <br>

  <input type="submit" value="Create Song">
</form>

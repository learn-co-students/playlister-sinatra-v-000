<form action="/songs" method="POST" accept-charset="utf-8">
  <label>Name: </label> 
  <input type="text" name="name" id="Name"/> 

  <br><br>

  <label>Artist: </label> 
  <input type="text" name="artist_name" id="Artist Name"/>
  
  <br><br>

  <% @genres.each do |genre| %>
    <label><%= genre.name %></label>
    <input type="checkbox" value="<%= genre.id %>" name="genre_id" id="<%= genre.name %>"/>
  <% end %>

  <br><br>

  <input type="submit" value="Create" name="Create" id="Create"/>
  
</form>

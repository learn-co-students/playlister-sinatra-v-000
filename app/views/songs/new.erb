
<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song_name" id="Name">

  <br></br>

  <% Genre.all.each do |genre| %>
   <input type="checkbox" name="genres_name" id="<%= genre.name %>" value="<%=genre.name%>"><%=genre.name%></input>
  <% end %>

  <br></br>
    <label>Artist Name:</label>
      <input  type="text" name="artist_name"  id="Artist Name"></input>
    <br></br>

  <input type="submit" value="Create Song">
</form>

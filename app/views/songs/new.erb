<h1>Add a New Song</h1>

<form action="/songs" method="POST">
    Song Name: <input type="text" id="Name" name="song[name]"> <br>
    <% Genre.all.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <%= genre.name %> </input>
    <% end %>
    <br>
    Artist Name: <input type="text" id="Artist Name" name="artist[name]"> <br>
    <br>
    <input type="submit" value="Create">
</form>


<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>
  <br></br>
  <input type="text" name="Name" id="song_name">
  <br></br>
  <%@genres.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%></input>
  <%end%>
  <br></br>
  <label>and/or, create a new artist:</label>
  <br></br>
  <label>name:</label>
  <input  type="text" name="Artist Name"></input>
  <br></br>
  <input type="submit" value="Create">
</form>

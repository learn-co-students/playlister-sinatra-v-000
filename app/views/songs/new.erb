<h1>Create a New Song</h1>
<form action="/songs/new" method="post">

  <label for="Name">Song Name:</label>
  <input id="Name" type="text" name="song[name]" value="Name">

  <br><br>

  <label for="artist_name">Artist Name:</label>
  <input id="artist_name" type="text" name="artist[name]" value="Artist Name">

  <br><br>

  <label>Select Genres:</label>
  <ul>
  <% Genre.all.each do |genre| %>
    <li><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%=genre.id%>"><%= genre.name %></input></li>
  <% end %>
  </ul>

  <input type="submit" name="submit" value="Create">
</form>

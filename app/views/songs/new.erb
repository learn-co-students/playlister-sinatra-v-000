<h1>Create a New Song</h1>


<form action="/songs/:slug" method="post">
  <label>Song Name: </label>
  <input type="text" name="song_name" id="Name">
  <br><br>
  <label>Artist Name: </label>
  <input type="text" name="artist_name" id="Artist Name">
  <br><br>

  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <br><br>
  <input type="submit" value="Create">
</form>

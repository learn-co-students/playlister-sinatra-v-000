<h2>New Song</h2>

<form action="/songs" method="post">
  <p><label>Song:
     <input type="text" name="Name"></label></p>

  <p><label>Artist:
     <input type="text" name="Artist Name"></label></p>

  <p><strong>Choose genres</strong>
    <% Genre.all.each do |genre| %>
     <input type="checkbox" id="<%= genre.name %>"
            name="genre_ids[]" value"<%= genre.id %>"><%= genre.name %>
    <% end %></p>

  <p><strong>and/or create new genre</strong>
     <input type="text" name="Genre Name"></p>

     <input type="submit" value="Create">
</form>
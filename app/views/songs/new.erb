<h1>Create a Song</h1>
<br></br>

<form action="/songs" method="post">
  <label for="song_artist_name">Artist Name: </label>
  <input type="text" name="song[artist][name]" id="song_artist_name">

  <label for="song_name">Song Name: </label>
  <input type="text" name="song[name]" id="song_name">
  <br></br>

  <label>Choose existing genres:</label></br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>
  <br></br>
  
  <input type="submit" value="Create Song">
</form>

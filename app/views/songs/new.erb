<h1>New Song</h1>

<form method="post" action="/songs" >
  <label for="name">Name: </label>
  <input type="text" name="song[name]" id="Name" value="name"><br>

  <label for="artist">Artist: </label>
  <input type="text" name="artist[name]" id="Artist Name" value=""><br>

  <label for="genre">Genres: </label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %></input><br>
  <% end %>
  <br>
  <input type="submit" value="Create Song" id="Create">Create</input>

</form>

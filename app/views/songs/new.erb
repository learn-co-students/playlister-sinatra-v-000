<h1>Create a new song</h1>

<form action="/songs" method="POST">
  <label>Name</label>
  <input type="text" name="song[name]" id="Name">
  
  <br></br> 
 
  <label>Choose an existing genre/genres:</label>
 
  <br>
 
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <%= genre.name %>
  <% end %>

  <br></br>
  
  <label>and/or, create a new genre:</label>

  <br></br>
  <label>Genre</label>
  <input type="text" name="genre[name]" >

  <br></br>

  <label>Artist Name</label>
  <input type="text" name="artist[name]" id="Artist Name">

  <br></br>

  <input type="submit" value="Create Song">
</form>
<h1>Create a new song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song_name" id="Name">

  <br></br>

  <label>Artist:</label>

  <br></br>

  <input type="text" name="artist_name" id="Artist Name">

  <br></br>

  <label>Choose a genre:</label>

  <br></br>

  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
  <% end %>

  <!-- <br></br>

    <label>or create a new genre:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="genre_name" id="Genre Name"></input> -->

  <br></br>
  <input type="submit" value="Create Song">
</form>

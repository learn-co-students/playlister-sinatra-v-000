<h1>Create a New Song!</h1>

<form method='POST' action='/songs'>
  <label for="song_name">Name</label><input type="text" name="song_name" id="song_name"><br><br>

  <label for="artist">Artist Name </label><input type="text" name="artist_name" id="artist"><br><br>

  <% Genre.all.each do |genre| %>
    <label><%= genre.name %></label>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>
  <br><br>
  <input type="submit" value="Create Song">
</form>

<p>New Song</p>

<form action="/songs" method="POST">
  <br>
  <input type="text" name="name" id="song_name"placeholder="Name"><br>
  <input type="text" name="artist" id="artist_name"placeholder="Artist Name"><br>

  <% Artist.all.each do |artist| %>
    <input id="<%= artist.name %>" type="checkbox" name="artists[]" value="<%= artist.id %>">
  <% end %>


  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
<% end %>


  <input type="submit" value="Create Song">
  </form>

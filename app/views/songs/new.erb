<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="song_name">

  <br></br>

  <label>Choose a Genre:</label>

  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="[genre][]" id="<%=genre.id%>" value="<%=genre.id%>"><%=genre%></input>
  <%end%>

  <br></br>

    <label>Create a new Artist:</label>
    <br></br>
    <label>Name:</label>
      <input  type="text" name="artist[name]"></input>
    <br></br>
  <input type="submit" value="Create Song">
</form>

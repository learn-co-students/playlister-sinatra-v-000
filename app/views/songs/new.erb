<h1>New Song!</h1>
<form action="/songs" method="post">

  <label>Song Name: </label>
  <input type="text" name="song[name]" id="Name">
  <br>
  <br>
  <label>Artist Name: </label>
  <input type="text" name="song[artist_name]" id="Artist Name">
  <br>
  <br>
  <label>Select Genre:</label>
  <br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"><%=genre.name%>
    <br>
  <% end %>
  <p>Or create :</p>
  <input type="text" name="new_genre[name]" value="">
  <br>
  <br>
  <input type="submit" value="Create">
</form>

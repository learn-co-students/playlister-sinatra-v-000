

<h1>Add a New Song: </h1>

<form action="/songs" method="POST">


<label>Artist Name:</label>
 
  	<input 
  		type="text" 
  		name="Artist Name"
  		>
  
  	<br>

	<label>Song Name</label>
	<input 
		type="text" 
		name="Name" 
		>
	<br></br>

  
	
	
	<label>Genres</label>

	<!-- Make a checkbox for all the existing genres then create new?  -->
	<% Genre.all.each do |genre| %>
		<input 
		type="checkbox" 
		value="<%= genre.id %>" 
		name="genres" 
		id="<%= genre.name %>"
		>
		<% end %>
	
	<br>
 
	

  	<input type="submit" value="Create">

</form>
<h2>Create a new Song</h2>

<form action="/songs" method="post">
  <label>Name:</label>
  <input type="text" name="song[name]" id="Name">
  <br></br>

  <label>Artist:</label>
  <input type="text" name="artist" id="Artist Name">
  <br></br>

  <label>Genre:</label>
  <% Genre.all.each {|genre| %>
    <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name.capitalize%></input>
  <% } %>
  <br></br>

  <input type="submit" value="Create">
</form>

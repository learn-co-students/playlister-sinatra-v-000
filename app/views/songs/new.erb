<h1>Create a New Song</h1>
<form method="POST" action="/songs">
  <label>Name:</label>

  <br></br>

  <input type="text" name="song[name]" id="Name">

  <br></br>

  <label>Choose genre:</label>

  <br></br>

  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
<% end %>

  <br></br>

  <label>and/or create a new artist:</label>

  <br></br>

  <label>New Artist Name:</label>

  <input type="text" name="artist[name]" id="Artist Name">

  <input type="submit" value="Create">

</form>

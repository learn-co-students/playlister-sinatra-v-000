<h1>Create a new <strong style="color: red">Song</strong></h1>
<form method="POST" action="/songs">
  <p><strong style="color: red">Song</strong> Name: <input type="text" name="song[name]" id="Name"></p>
  <br/>
  <p>Select <strong style="color: blue">Artist</strong> to add</p>
  <%Artist.all.each do |artist|%>
    <input type="checkbox" name="song[artist_id]" id="<%=artist.id%>" value="<%=artist.id%>"><%=artist.name%></input>
  <%end%>
  <br/>
  <p>Create a new <strong style="color: blue">Artist</strong></p>
  <p><strong style="color: blue">Artist</strong> Name: <input type="text" name="artist[name]" id="Artist Name"></p>
  <p>Select <strong style="color: green">Genre</strong> to add</p>
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>
  <% end %>
  <br/>
  <p>Create a new <strong style="color: green">Genre</strong></p>
  <p><strong style="color: green">Genre</strong> Name: <input type="text" name="genre[name]" id="genre_name"></p>
  <input type="submit" value="Create">
</form>

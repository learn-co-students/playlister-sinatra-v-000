<h1>Create and Save a New Song</h1>

<form action="/songs" method="post">
  <p>Song Name: <input type="text" name="name" id="Name"></p>
  <p>Artist Name: <input type="text" name="artist" id="Artist Name"></p>

  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genre_ids[]" value="<%= genre.id %>">
    <%= genre.name %>
  <% end %>

  <br></br>
  <input type="submit" value="Create">
</form>

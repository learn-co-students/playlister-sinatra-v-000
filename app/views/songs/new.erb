<h1>Add a New Song</h1>
<form action="/songs" method="post">
  <label>Name: </label><input type="text" name="name" id="Name">

  <br></br>

  <label>Artist: </label><input type="text" name="artist_name" id="Artist Name"></input>

  <br></br>

  <label>Choose a genre:</label>

   <br></br>

   <%Genre.all.each do |g|%>
     <input type="checkbox" name="genres[]" id="<%=g.name%>" value="<%=g.id%>"><%=g.name%></input>
   <%end%>

     <br></br>
   <input type="submit" value="Create">

</form>

<h1>Create a new song:</h1>

<form action="/songs" method="post">
  <label>Name</label>
  <input type="text" name="song[name]" id="Name">
  <br>
  <label>Select existing genre:</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>">
  <%end%>
  <br>
  <label>Create a new Artist:</label>
  <input type="text" name="song[artist]" id="Artist Name">
  <input type="submit" name="submit" value="Create">
</form>

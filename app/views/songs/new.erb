<h2> Create a New Song! </h2>

<form action="/songs" method="post">
  <label> Song </label>
  <input id="Name" type="text" name="Name">

  <br></br>

  <label> Artist </label>
  <input id="Name" type="text" name="Artist Name">

  <br></br>

  <label> Genre </label>
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=@song.genre.name%></input>
<% end %>

  <br></br>

  <input type="submit" value="Create">
</form>

<h1>Create a Song</h1>

<form action="/songs" method="POST">
  <label>Please Enter Song:</label>
  <br></br>
  <input type="text" name="song_name" id="Name">
  <br></br>
  <label>Please Enter Artist:</label>
  <br></br>
  <input type="text" name="artist_name" id="Artist Name">
  <br></br>
  <label>Choose a genre:</label>
  <br></br>

  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>
  <br></br>
  <input type="submit" value="Create">
  </form>

<h1>Create a new Song</h1>
<h4><a href="/artists">Artists</a> - <a href="/songs">Songs</a> - <a href="/genres">Genres</a></h4>

  <form method='post' action='/songs'>
    <label for='Name'>Name:</label>
      <input type='text' name='song[name]' id='Name'/>

      <br></br>

    <label for='Artist Name'>Artist Name:</label>
      <input type='text' name='song[artist]' id='Artist Name'/>

      <br></br>

    <p>Choose a Genre:</p>
      <% @genres.each do |genre| %>
        <label for="genre_<%= genre.id %>">
            <input type='checkbox' value='<%= genre.id %>' name='song[genre_ids][]' id='genre_<%= genre.id %>'/>
            <%= genre.name %><br>
        </label>
      <% end %>
      <br>
    <label for='genre_new'>or, Create one:</label>
      <input type='text' name='song[new_genre][name]' id='genre_new'/>

      <br></br>

    <input type='submit' value='Create'/>
  </form>

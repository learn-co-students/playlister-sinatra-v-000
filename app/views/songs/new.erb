<h1>New Song</h1>

<form action="/songs" method="post">
  <input type="text" id="Name" name="song[name]" placeholder="Song Name" />
  <input type="text" id="Artist Name" name="artist_name" placeholder="Artist Name" />
  <br />
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>
  <%end%>
  <br />
  <input type="submit" value="Create" />
</form>

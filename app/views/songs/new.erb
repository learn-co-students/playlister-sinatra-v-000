<h1>Create a new song</h1>

<form action="/songs" method="post">

  <label>Name: </label>
  <input type="text" id="song[name]" name="Name">

  <br></br>
  <label>Select an existing artist:</label>

  <br></br>

  <%Artist.all.each do |artist|%>
    <input type="checkbox" name="artist[id][]" id="<%=artist.id%>" value="<%= artist.id %>"><%=artist.name%></input>
  <%end%>

  <br></br>

  <label>and/or create a new artist:</label>
  <input type="text" name="Artist Name" id="Artist Name"></input>

  <br></br>

  <label>Select genre(s):</label>
  <br></br>

  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%= genre.id %>"><%=genre.name%></input>
  <%end%>

  <br><br>
  
  <input type="submit" value="Create">
</form>

<h1>Enter a new Song!</h1>

<form action="/songs" method="post">
  <label for="Name">Song Name:</label></br>
  <input id="Name" type="text" name="Name"></br>

  <label for="Artist Name">Artist Name:</label></br>
  <input id="Artist Name" type="text" name="Artist Name"></br>

  <label for="genres">Genres:</label></br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name%>" type="checkbox" name="genres[]" value=<%= genre.id %>><%= genre.name %></input>
  <% end %>
  </br>
  <input type="submit" value="Create">
</form>

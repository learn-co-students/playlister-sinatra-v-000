<h2>Create a New Song</h2>

<form method="POST" action="/songs">
  <label for="song_name">Song Name:</label>
  <input type="text" id="Name" name="song[name]">
  <br><br>
  <label for="artist_name">ArtistName:</label>
  <input type="text" id="Artist Name" name="song[artist][name]">
  <br><br>
  <% Genre.all.each do|genre| %>
    <input type="checkbox" name="song[genres][][name]" id="<%= genre.name %>" value="<%= genre.name %>"><%=genre.name %></input>
  <% end %>
  <br><br>
  <input type="submit" value="Create">
 
</form>
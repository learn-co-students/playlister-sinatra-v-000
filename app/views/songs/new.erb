<h1>Add a new song:</h1>

<form method="post" action="/songs">
  <label>Artist Name:</label><input type="text" name="artist[name]" id="Artist Name"></input>
  <br>

  <label>Name:</label><input type="text" name="song[name]" id="Name"></input>
  <br>

  <label>Genres</label>
  <% Genre.all.each do |genre| %>
    <%= genre.name %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <input type="submit" id="Create">
</form>

<h1>Add a New Song</h1>

<form action="/songs" method="POST">
  <label> Artist Name </label>
  <input id= "Artist Name" type="text" name="artist_name"></br>

  <label> Song Name </label>
  <input id="Name" type="text" name="song_name"> </br>

  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <label><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <%= genre.name %></label>
  <% end %>
  <input type="submit" value="Create">
</form>

<h3>Create New song</h3>

<form method="post" action="/songs" >
	<label>Name:</label>
	<br>
	<input type="text" name="song[name]" id="Name" placeholder="Nmae:">
    <br>

    <label>Genres</label>
    <br>
    <% Genre.all.each do |genre|%>
      <input type="checkbox" name="genres[]" value="<%= genre.id%>" id="<%= genre.name%>"><%= genre.name%></input>
    <% end %>
    <br>

    <label>Artist Name</label>
    <br>
    <input type="text" name="artist[name]" id="Artist Name" placeholder="Artist:">
    <br>

	<input type="submit" value="Create">
</form>
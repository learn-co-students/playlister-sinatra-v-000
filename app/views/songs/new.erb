  <form action="/songs" method="POST">

    <label>Artist Name<input type="text" name="Artist Name"></label> </br>

    <label>Name<input type="text" name="Name" id="Name"></label>

      <br></br>

    <label>Select an Genre
      <%Genre.all.each do |genre|%>
        <label><%=genre.name%>
          <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>">
        </label>
      <%end%>
    </label>

    <br></br>
    <input type="submit" value="Create">
  </form>

  <% if @success_message %>
  <div id="success" style="border: 2px solid green;">
  <%= @success_message %>
  </div>
<% end %>

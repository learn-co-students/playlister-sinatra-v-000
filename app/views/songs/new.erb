<h1>New Song:</h1>

<form method="post" action="/songs">

  <label for="name">Name</label>
  <input type="text" name="Name">

  <br></br>
  <br></br>

  <label>Artist: </label>
  <% Artist.all.each do |artist| %>
  <input type="radio" name="Artist" value="<%= artist.id %>"><%= artist.name %></input>
  <%end%>

  <label>Create New Artist: </label>
  <input type="text" name="Artist Name">

  <br></br>
  <br></br>

  <h4>Choose an existing genre:</h4>
  <% Genre.all.each do |genre| %>
  <input type="checkbox" name="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
<% end %>

  <input type="submit" value="Create">
</form>

<h1>Create a song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>
  <input type="text" name="song[name]" id="Name" />
  <br />

  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genres][]" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %>
  <% end %>
  <br />

  <label>Artist Name:</label>
  <input type="text" name='song[artist]' id="Artist Name" />
  <br />
  <br />

  <input type="submit" value="Create Song" id="Create"/>



</form>

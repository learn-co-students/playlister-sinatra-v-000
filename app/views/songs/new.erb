<h1>Create a New Song</h1>

<form action="/songs" method="POST">
  <label for="Name" >Name:</label>
  <input type="text" name="song[name]" id="Name">
  <br></br>
  <label for="Artist Name">Enter Artist:</label>
  <input type="text" name="artist[name]" id="Artist Name">
  <br></br>
  <label>Choose Genre(s):</label>
  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"><%= genre.name %>
  <% end %>
  <br></br>
  <input type="submit" value="Create">
</form>
<br>
<a href="/">Home</a>

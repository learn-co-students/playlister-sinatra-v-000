<h1>Create a Song</h1>

<form method="POST" action="/songs">
  <label for="Song Name">Name:</label>
    <input type="text" name="song_name" id="Song Name">
  <br/>
  <br/>
  <label for="artist_name">Artist:</label>
    <input type="text" name="artist_name" id="Artist Name">
  <br/>
  <br/>
  <label for="genres">Genres:</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>"> <%= genre.name %> </input>
  <% end %>
  <br/>
  <br/>
    <input type="submit" name="Create" value="Create" id="Create">
</form>
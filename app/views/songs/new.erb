<!-- creating a new artist with or without an existing artist  -->
<h1>Create a New Song</h1>

<form action="/songs" method="POST">

  <label>Song Name: </label>

  <input type="text" name="Name">

  <br></br>

  <label>Artist Name: </label>

  <input type="text" name="Artist Name" id="Artist Name"></input>

  <br></br>

  <label>Choose existing genres:</label></br>

  <%Genre.all.each do |genre|%>

    <input type="checkbox" name="genres[]" id="<%= genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>

  <%end%>

  <br></br>

  <input type="submit" value="Create Song">
</form>

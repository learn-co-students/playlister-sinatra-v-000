<h1>Create a new song</h1>
<form action="/songs" method="post">
  <label>Name: </label>
  <input type="text" id="Name" name="name">
  <br><br>
  <label>Select an artist:</label>
  <br>
  <%Artist.all.each do |artist|%>
    <input type="checkbox" name="artist[id]" id="<%=artist.name%>" value="<%= artist.id %>"><%=artist.name%></input>
    <br>
  <%end%>
  <label>or create a new artist</label>
  <input type="text" name="artist[name]" id="Artist Name">
  <br><br>
  <label>Select genre(s):</label>
  <br>
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%= genre.id %>"><%=genre.name%></input><%=%>
    <br>
  <%end%>
  <br><br>
  <input type="submit" value="Create">
</form>

<h1>Add A Song!</h1>

<form action="/songs" method="post">

  <label>Song Name </label><input id="Name" type="text"
    name="song[name]">
  <br>
  <label>Artist Name </label><input id="Artist Name" type="text"
    name="artist_name">
  <br></br>
  <label>Genres</label>
  <br>
  <% @genres.each do |genre| %>
  <input type="checkbox" id= "<%= genre.name %>" name="song[genre_ids][]"
   value="<%= genre.id %>"><%= genre.name %></input>
    <br>
  <% end %>
  <br>
  <label>Add Genre </label><input id="genre_name" type="text"
    name="genre_name">
  <br></br>
  <input type="submit" name="" value="Create">

</form>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label><br></br>
  <input type="text" name="song[name]" id="Name"><br></br>
  <label>Create or enter an existing artist:</label><br></br>
    <label>name:</label>
      <input  type="text" name="song[artist]" id="Artist Name"></input><br></br>
  <label>Choose an existing Genre:</label><br></br>
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%></input>
<% end %><br></br>
  <input type="submit" value="Create">
</form>
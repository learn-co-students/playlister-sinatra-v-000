<h1>Add a Song</h1>
<form method="post" action="/songs">
  <label for="song[name]">Name: </label>
  <input type="text" name="song[name]" id="Name">
  <br><br>

  <label for="artist[name]">Artist: </label>
  <input type="text" name="artist[name]" id="Artist Name">
  <br><br>

  <label for="genres">Genres: </label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="song[genre_ids][]" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>
  <br><br>

  <input type="submit" value="Create">
</form>
<h1>Update Song</h1>
<form method='POST' action='/songs/<%=@song.slug%>'>

  <label>Artist Name</label>
  <input type='text' name='artist' id='Artist Name' value='<%=@song.artist.name%>'><br><br>

  <label>Song Name</label>
  <input type='text' name='name' id='Song Name' value='<%=@song.name%>'><br><br>

  <% Genre.all.each do |genre| %>
    <label><%= genre.name %></label>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
  <% end %>
  <input type='submit' value='Save'>
</form>
<% unless locals.empty? %>
    <%= message %>
<% end %>
<h1>Songs:</h1>
<% @songs.each do |song| %>
    <p><a href="/songs/<%= song.slug %>"><%= song.name %></a><% if song.artist %>, by <a href="/artists/<%= song.artist.slug %>"><%= song.artist.name %></a><% end %><% if !song.genres.empty? %>, <% end %>
    <% song.genres.collect do |genre| %>
        <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
    <% end.join(", ") %></p>
<% end %>